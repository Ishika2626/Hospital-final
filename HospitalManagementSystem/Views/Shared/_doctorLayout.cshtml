<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/img/hospital.png">
    <title>CureLife Hospital</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --accent-color: #e74c3c;
            --light-color: #ecf0f1;
            --dark-color: #2c3e50;
            --success-color: #2ecc71;
            --warning-color: #f39c12;
            --danger-color: #e74c3c;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f7fa;
            overflow-x: hidden;
        }

        /* Sidebar styles */
        .sidebar {
            background-color: var(--primary-color);
            color: white;
            min-height: 100vh;
            width: 260px;
            transition: all 0.3s ease;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .sidebar-collapsed {
            margin-left: -260px;
        }

        .content {
            margin-left: 260px;
            padding: 20px;
            transition: all 0.3s ease;
            width: calc(100% - 260px);
        }

        .content-expanded {
            margin-left: 0;
            width: 100%;
        }

        .sidebar-header {
            padding: 20px;
            background-color: rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
        }

        .sidebar ul {
            padding: 0;
            list-style: none;
        }

            .sidebar ul li a {
                padding: 15px 20px;
                display: flex;
                align-items: center;
                color: rgba(255, 255, 255, 0.8);
                text-decoration: none;
                transition: all 0.3s;
                font-size: 16px;
            }

                .sidebar ul li a:hover {
                    background-color: rgba(255, 255, 255, 0.1);
                    color: white;
                }

                .sidebar ul li a.active {
                    background-color: var(--secondary-color);
                    color: white;
                    border-left: 4px solid white;
                }

                .sidebar ul li a i {
                    margin-right: 10px;
                    width: 20px;
                    text-align: center;
                }

        /* Topbar styles */
        .topbar {
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 15px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            position: sticky;
            top: 0;
            z-index: 999;
        }

        .toggle-sidebar {
            cursor: pointer;
            font-size: 1.5rem;
            display: none;
        }

        /* Responsive styles */
        @@media (max-width: 1200px) {
            .sidebar

        {
            width: 220px;
        }

        .content {
            margin-left: 220px;
            width: calc(100% - 220px);
        }

        .sidebar ul li a {
            font-size: 14px;
            padding: 12px 15px;
        }

        }

        @@media (max-width: 992px) {
            .sidebar

        {
            margin-left: -260px;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
        }

        .sidebar-expanded {
            margin-left: 0;
        }

        .content {
            margin-left: 0;
            width: 100%;
        }

        .toggle-sidebar {
            display: block;
        }

        }

        @@media (max-width: 576px) {
            .content

        {
            padding: 10px;
        }

        .sidebar {
            width: 100%;
            max-width: 280px;
        }

        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            let toggleBtn = document.querySelector('.toggle-sidebar');

            if (!toggleBtn) {
                const topbar = document.querySelector('.topbar');
                if (topbar) {
                    toggleBtn = document.createElement('div');
                    toggleBtn.classList.add('toggle-sidebar');
                    toggleBtn.innerHTML = '<i class="fas fa-bars"></i>';
                    topbar.prepend(toggleBtn);
                }
            }

            if (toggleBtn) {
                toggleBtn.addEventListener('click', function () {
                    sidebar.classList.toggle('sidebar-expanded');
                });
            }

            document.addEventListener('click', function (e) {
                if (window.innerWidth < 992 && sidebar.classList.contains('sidebar-expanded')) {
                    if (!sidebar.contains(e.target) && !toggleBtn.contains(e.target)) {
                        sidebar.classList.remove('sidebar-expanded');
                    }
                }
            });

            window.addEventListener('resize', function () {
                if (window.innerWidth >= 992) {
                    sidebar.classList.remove('sidebar-expanded');
                }
            });
        });
    </script>
</head>

<body>
    <!-- Sidebar -->
    <nav id="sidebar" class="sidebar">
        <div class="sidebar-header d-flex align-items-center">
            
            <h5 class="mb-0">🏥 CureLife Hospital</h5>
        </div>

        <ul class="list-unstyled">
            <li>
                <a asp-controller="DoctorPanel" asp-action="DashBoard" class="active">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li>
                <a asp-controller="DoctorPanel" asp-action="Appointments">
                    <i class="fas fa-calendar-check"></i> Appointments
                </a>
            </li>
            <li>
                <a asp-controller="DoctorPanel" asp-action="Patient" asp-route-doctorId="101">
                    <i class="fas fa-user-injured"></i> My Patients
                </a>
            </li>
            <li>
                <a asp-controller="DoctorPanel" asp-action="Index">
                    <i class="fas fa-flask"></i> Lab Reports
                </a>
            </li>
            <li>
                <a asp-controller="DoctorPanel" asp-action="ViewSchedule" class="btn btn-primary">
                    <i class="fas fa-clock"></i> My Schedule
                </a>
            </li>
            <li>
                <a asp-controller="RegisterLogin" asp-action="Login" >
                    <i class="fas fa-clock"></i> LogOut
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main Content -->
    <div id="content" class="content">
        @RenderBody()
    </div>
</body>
</html>
