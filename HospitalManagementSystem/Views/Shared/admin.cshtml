    <style>
        html, body {
            height: 100%;
            display: flex;
            flex-direction: column;
            overflow-x: hidden;
        }

        /* Content takes up available space */
        .content {
            flex: 1;
            margin-left: 250px; /* Matches sidebar width */
            padding: 20px;
        }

        

        /* Sidebar Styling */
        .sidebar {
            height: 100vh;
            width: 300px;
            position: fixed;
            background: linear-gradient(to right, #1e3c72, #2a5298); /* Gradient blue */
            padding-top: 10px;
            color: white;
            overflow-y: auto;
            transition: width 0.3s;
        }

            .sidebar a {
                color: white;
                
                display: flex;
                align-items: center;
               
                text-decoration: none;
                font-size: 17px;
            }

                .sidebar a:hover {
                    background-color: #5bc0de;
                    border-radius: 5px;
                }

            .sidebar .logo {
                text-align: center;
                font-size: 22px;
                font-weight: bold;
                padding: 15px 0;
                background: linear-gradient(to right, #1e3c72, #2a5298); /* Gradient blue */
                margin-bottom: 10px;
            }

        /* Sidebar Menu */
        .menu {
            list-style: none;

        }

            .menu li {
                padding: 12px 10px;
            }

                .menu li a {
                    color: white;
                    text-decoration: none;
                    display: flex;
                    align-items: center;
                    font-size: 17px;
                    transition: background 0.3s;
                    justify-content: space-between;
                }

                    .menu li a i {
                        margin-right: 20px;
                        font-size: 17px;
                       
                    }

                    /* Hover Effect */
                    .menu li a:hover {
                        background-color: #0275d8;
                    }

        /* Dropdown Menu */
        .submenu {
            list-style: none;
            padding-left: 20px;
            display: none;
        }

            .submenu li {
                padding: 8px 0;
            }

                .submenu li a {
                    font-size: 16px;
                    color: #bfc9d3;
                    text-decoration: none;
                    display: block;
                    padding-left: 15px;
                }

        /* Show Dropdown */
        .menu li.active .submenu {
            display: block;
        }

        /* Chevron Styling */
        .arrow {
            font-size: 14px;
            transition: transform 0.3s;
        }

        /* Rotate arrow when active */
        .menu li.active .arrow {
            transform: rotate(180deg);
        }

        /* Main Content */
        .main-content {
            margin-left: 250px; /* Same as sidebar width */
            padding: 20px;
            padding-top: 80px; /* Prevents navbar overlap */
            background-color: #ecf0f1;
            min-height: 100vh;
        }

        

        /* Responsive Adjustments */
        @@media screen and (max-width: 768px) {
            .sidebar {
                width: 200px;
            }

            .main-content {
                margin-left: 200px;
            }
        }

        @@media screen and (max-width: 480px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }



            .main-content {
                margin-left: 0;
            }
        }
        /* Modern Navbar */
        .custom-navbar {
            margin-left: 300px; /* Adjust if sidebar width changes */
            background: linear-gradient(to right, #1e3c72, #2a5298); /* Gradient blue */
            padding: 12px 24px;
            border-bottom: 3px solid #1c2b4a;
            z-index: 1000;
        }

            .custom-navbar .nav-link {
                color: #ffffff;
                font-weight: 500;
                transition: color 0.3s ease, background 0.3s ease;
                border-radius: 5px;
                padding: 8px 12px;
            }

                .custom-navbar .nav-link:hover {
                    background-color: rgba(255, 255, 255, 0.15);
                    color: #ffffff;
                    text-decoration: none;
                }

            .custom-navbar .logout-link:hover {
                background-color: rgba(255, 0, 0, 0.2);
            }

        /* Optional icon margin */
        .navbar .fa-solid {
            margin-right: 6px;
        }

      
        /* Dropdown Menu */
        .dropdown-content {
            position: absolute;
            right: 0;
            top: 50px;
            background: white;
            color: black;
            width: 150px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: none;
            flex-direction: column;
            border-radius: 5px;
            overflow: hidden;
            z-index: 1000;
        }

            /* Dropdown Items */
            .dropdown-content a {
                padding: 12px;
                text-decoration: none;
                color: black;
                display: block;
                font-size: 14px;
                transition: background 0.3s;
            }

                .dropdown-content a:hover {
                    background: #f0f0f0;
                }

        /* Show Dropdown on Hover */
        .profile-dropdown:hover .dropdown-content {
            display: flex;
        }

        /* Footer always at the bottom */
        footer {
            background-color: #0275d8;
            color: white;
            text-align: center;
            padding: 10px;
            width: 100%;
            margin-left: 200px;
        }

        /* Responsive Footer for Smaller Screens */
