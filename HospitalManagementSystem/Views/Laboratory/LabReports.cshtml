@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Lab Reports</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayLabReports","Laboratory")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Lab Report List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-file-medical"></i> Lab Report Entry
            </div>

            <div class="card-body">
                <form id="labReportForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-id-badge"></i> Patient Test ID</label>
                            <input type="text" class="form-control" id="patient_test_id" placeholder="Enter patient test ID" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Report Date</label>
                            <input type="date" class="form-control" id="report_date" required>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-notes-medical"></i> Test Result</label>
                            <textarea class="form-control" id="test_result" placeholder="Enter test result" required></textarea>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-microscope"></i> Findings</label>
                            <textarea class="form-control" id="findings" placeholder="Enter findings" required></textarea>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-check-circle"></i> Report Status</label>
                            <select class="form-control" id="report_status" required>
                                <option value="">Select Status</option>
                                <option value="Pending">Pending</option>
                                <option value="Completed">Completed</option>
                                <option value="Reviewed">Reviewed</option>
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user"></i> Lab Technician ID</label>
                            <input type="text" class="form-control" id="lab_technician_id" placeholder="Enter technician ID">
                        </div>

                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-notes-medical"></i> Doctor Notes</label>
                            <textarea class="form-control" id="doctor_notes" placeholder="Enter doctor notes (optional)"></textarea>
                        </div>

                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-floppy-disk"></i> Save Report
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        
    </div>

    <script>
        document.getElementById("labReportForm").addEventListener("submit", function(event) {
            event.preventDefault();

            let patient_test_id = document.getElementById("patient_test_id").value;
            let report_date = document.getElementById("report_date").value;
            let test_result = document.getElementById("test_result").value;
            let findings = document.getElementById("findings").value;
            let report_status = document.getElementById("report_status").value;
            let lab_technician_id = document.getElementById("lab_technician_id").value;

            let table = document.getElementById("labReportTable");
            let newRow = table.insertRow();
            newRow.innerHTML = `
                <td>${patient_test_id}</td>
                <td>${report_date}</td>
                <td>${test_result}</td>
                <td>${findings}</td>
                <td>${report_status}</td>
                <td>${lab_technician_id}</td>
            `;

            document.getElementById("labReportForm").reset();
        });
    </script>
</body>
</html>
