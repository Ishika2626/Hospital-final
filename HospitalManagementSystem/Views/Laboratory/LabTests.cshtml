@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Test Entry</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayLabTests","Laboratory")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Test Entry List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-vial"></i> Test Entry
            </div>
            <div class="card-body">
                <form id="testForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Name</label>
                            <input type="text" class="form-control" id="test_name" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Category</label>
                            <input type="text" class="form-control" id="test_category" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Type</label>
                            <input type="text" class="form-control" id="test_type" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Duration (mins)</label>
                            <input type="number" class="form-control" id="test_duration" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Cost</label>
                            <input type="number" class="form-control" id="test_cost" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Method</label>
                            <input type="text" class="form-control" id="test_method" required>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label">Test Description</label>
                            <textarea class="form-control" id="test_description"></textarea>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success w-100">
                                <i class="fa-solid fa-floppy-disk"></i> Save Test
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger w-100">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
    </div>
    <script>
        document.getElementById("testForm").addEventListener("submit", function(event) {
            event.preventDefault();
            let test_name = document.getElementById("test_name").value;
            let test_category = document.getElementById("test_category").value;
            let test_type = document.getElementById("test_type").value;
            let test_duration = document.getElementById("test_duration").value;
            let test_cost = document.getElementById("test_cost").value;
            let test_method = document.getElementById("test_method").value;
            let table = document.getElementById("testTable");
            let newRow = table.insertRow();
            newRow.innerHTML = `
                <td>${test_name}</td>
                <td>${test_category}</td>
                <td>${test_type}</td>
                <td>${test_duration} mins</td>
                <td>$${test_cost}</td>
                <td>${test_method}</td>
            `;
            document.getElementById("testForm").reset();
        });
    </script>
</body>
</html>
