@model IEnumerable<HospitalManagementSystem.Models.LabReportViewModel>
@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Lab Reports</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-center mb-4">Lab Reports</h2>

        @if (Model != null && Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Report ID</th>
                        <th>Patient Test ID</th>
                        <th>Report PDF</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var report in Model)
                    {
                        <tr>
                            <td>@report.ReportId</td>
                            <td>@report.PatientTestId</td>
                            <td>
                                @if (!string.IsNullOrEmpty(report.ReportFilePath))
                                {
                                    <a href="@report.ReportFilePath" target="_blank">View Report</a>
                                }
                                else
                                {
                                    <span class="text-danger">No Report Available</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No lab reports found.</p>
        }
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
