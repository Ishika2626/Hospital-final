@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tests - Hospital System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table td, .table th {
            text-align: center;
            vertical-align: middle;
        }

        .btn {
            padding: 5px 10px;
        }

        .action-icons i {
            font-size: 18px;
            margin: 0 5px;
            cursor: pointer;
        }

            .action-icons i:hover {
                color: #007bff;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="card p-3">
            <h2 class="text-center text-primary mb-3">
                <i class="fa-solid fa-flask"></i> Tests Management
            </h2>

            <!-- Search & Add Test -->
            <div class="d-flex justify-content-between mb-3">
                <input type="text" class="form-control w-25" placeholder="🔍 Search Tests..." id="searchTest">
                <a href="@Url.Action("LabTests", "Laboratory")" class="btn btn-success">
                    <i class="fa-solid fa-plus"></i> Add Test
                </a>
            </div>

            <!-- Tests Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Test ID</th>
                            <th>Test Name</th>
                            <th>Test Description</th>
                            <th>Test Category</th>
                            <th>Test Type</th>
                            <th>Test Duration (mins)</th>
                            <th>Test Cost</th>
                            <th>Test Method</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="testTable">
                        @* Sample Data for Display *@
                        <tr>
                            <td>1</td>
                            <td>101</td>
                            <td>Blood Test</td>
                            <td>Tests the overall health and function of the body through blood samples.</td>
                            <td>Diagnostic</td>
                            <td>Laboratory</td>
                            <td>15</td>
                            <td>50.00</td>
                            <td>Blood Sample</td>
                            <td class="action-icons">
                                <i class="fa-solid fa-eye text-primary" title="View"></i>
                                <i class="fa-solid fa-pen text-warning" title="Edit"></i>
                                <i class="fa-solid fa-trash text-danger" title="Delete"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>102</td>
                            <td>Urine Test</td>
                            <td>Tests the urine for various parameters such as infection, kidney function, etc.</td>
                            <td>Diagnostic</td>
                            <td>Laboratory</td>
                            <td>10</td>
                            <td>30.00</td>
                            <td>Urine Sample</td>
                            <td class="action-icons">
                                <i class="fa-solid fa-eye text-primary" title="View"></i>
                                <i class="fa-solid fa-pen text-warning" title="Edit"></i>
                                <i class="fa-solid fa-trash text-danger" title="Delete"></i>
                            </td>
                        </tr>
                        <!-- More Test Records Can Be Added Here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
