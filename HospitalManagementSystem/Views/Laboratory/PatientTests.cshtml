@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Patient Tests</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayPatientTests","Laboratory")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Patient Test List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-vial"></i> Patient Test Entry
            </div>
            <div class="card-body">
                <form id="testForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Patient ID</label>
                            <input type="text" class="form-control" id="patient_id" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test ID</label>
                            <input type="text" class="form-control" id="test_id" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Order ID</label>
                            <input type="text" class="form-control" id="test_order_id" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Test Date</label>
                            <input type="date" class="form-control" id="test_date" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Result Received</label>
                            <select class="form-control" id="result_received">
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Result Status</label>
                            <input type="text" class="form-control" id="result_status" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sample Collected Date</label>
                            <input type="date" class="form-control" id="sample_collected_date">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Sample Type</label>
                            <input type="text" class="form-control" id="sample_type" required>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success w-100">Save Test</button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger w-100">Reset</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

       
    </div>

    <script>
        document.getElementById("testForm").addEventListener("submit", function(event) {
            event.preventDefault();

            let patient_id = document.getElementById("patient_id").value;
            let test_id = document.getElementById("test_id").value;
            let test_order_id = document.getElementById("test_order_id").value;
            let test_date = document.getElementById("test_date").value;
            let result_received = document.getElementById("result_received").value;
            let result_status = document.getElementById("result_status").value;
            let sample_collected_date = document.getElementById("sample_collected_date").value;
            let sample_type = document.getElementById("sample_type").value;

            let table = document.getElementById("testTable");
            let newRow = table.insertRow();
            newRow.innerHTML = `
                <td>${patient_id}</td>
                <td>${test_id}</td>
                <td>${test_order_id}</td>
                <td>${test_date}</td>
                <td>${result_received == "1" ? "Yes" : "No"}</td>
                <td>${result_status}</td>
                <td>${sample_collected_date}</td>
                <td>${sample_type}</td>
            `;
            document.getElementById("testForm").reset();
        });
    </script>

</body>
</html>
