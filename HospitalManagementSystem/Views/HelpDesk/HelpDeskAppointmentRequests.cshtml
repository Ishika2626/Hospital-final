@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Help Desk Appointment Requests</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control, .form-select {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayHelpDeskAppointmentRequests","HelpDesk")" class="btn btn-danger btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Help Desk Appointment Request List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-calendar-check"></i> Help Desk Appointment Request
            </div>
            <div class="card-body">
                <form id="appointmentRequestForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user"></i> Patient ID</label>
                            <input type="number" class="form-control" id="patient_id" placeholder="Enter Patient ID" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Appointment ID</label>
                            <input type="number" class="form-control" id="appointment_id" placeholder="Enter Appointment ID" required>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-edit"></i> Requested Change</label>
                            <textarea class="form-control" id="requested_change" rows="3" placeholder="Describe the requested change" required></textarea>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user-tie"></i> Requested By (Staff ID)</label>
                            <input type="number" class="form-control" id="requested_by_staff_id" placeholder="Enter Staff ID" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-hourglass-half"></i> Status</label>
                            <select class="form-select" id="status" required>
                                <option value="Pending">Pending</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-clock"></i> Processed At</label>
                            <input type="datetime-local" class="form-control" id="processed_at">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar-plus"></i> Created At</label>
                            <input type="datetime-local" class="form-control" id="created_at">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-paper-plane"></i> Submit Request
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
