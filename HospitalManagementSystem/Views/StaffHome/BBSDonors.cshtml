@{
    ViewData["Title"] = "Donor Management";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<a href="@Url.Action("BloodBankStaffDashboard", "StaffHome")" class="btn btn-secondary mb-3">⬅ Back to Dashboard</a>
<div class="container mt-4">
    <h2 class="text-center">🩸 Donor Management</h2>

    <div class="row">
        <!-- Donor Form Panel -->
        <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
            <div class="card shadow p-3">
                <h5 class="text-center">➕ Add / ✏ Edit Donor</h5>
                <form id="donorForm">
                    <input type="hidden" id="donorId">
                    <div class="mb-2">
                        <label>Name:</label>
                        <input type="text" id="donorName" class="form-control" required>
                    </div>
                    <div class="mb-2">
                        <label>Blood Type:</label>
                        <select id="donorBloodType" class="form-control" required>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                        </select>
                    </div>
                    <div class="mb-2">
                        <label>Last Donation Date:</label>
                        <input type="date" id="donorLastDonation" class="form-control">
                    </div>
                    <div class="mb-2">
                        <label>Contact:</label>
                        <input type="text" id="donorContact" class="form-control" required>
                    </div>
                    <button type="button" class="btn btn-success w-100" onclick="saveDonor()">💾 Save</button>
                </form>
            </div>
        </div>

        <!-- Donor Table Panel -->
        <div class="col-lg-8 col-md-6 col-sm-12" style="margin-bottom:50px">
            <div class="card shadow p-3">
                <h5 class="text-center">📋 Donor List</h5>
                <input type="text" id="searchInput" class="form-control mb-2" placeholder="🔍 Search Donor">

                <div class="table-responsive">
                    <table class="table table-bordered table-striped" id="donorTable">
                        <thead class="thead-dark">
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Blood Type</th>
                                <th>Last Donation</th>
                                <th>Contact</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>John Doe</td>
                                <td><span class="badge bg-danger">O+</span></td>
                                <td>2025-02-20</td>
                                <td>+1234567890</td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="editDonor(this)">✏ Edit</button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteDonor(this)">🗑 Delete</button>
                                </td>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>John Doe</td>
                                <td><span class="badge bg-danger">O+</span></td>
                                <td>2025-02-20</td>
                                <td>+1234567890</td>
                                <td>
                                    <button class="btn btn-sm btn-warning" onclick="editDonor(this)">✏ Edit</button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteDonor(this)">🗑 Delete</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Responsive Styling -->
<style>
    .table {
        border-radius: 10px;
        overflow: hidden;
    }

    .card {
        border-radius: 12px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .badge {
        font-size: 14px;
        padding: 5px 10px;
        font-weight: bold;
    }

    .btn {
        font-size: 14px;
        padding: 6px 10px;
    }

    @@media (max-width: 768px) {
        .container

    {
        padding: 10px;
    }

    .table-responsive {
        overflow-x: auto;
    }

    }

    @@media (max-width: 576px) {
        .btn

    {
        font-size: 12px;
        padding: 5px 8px;
    }

    h2 {
        font-size: 20px;
    }

    .card {
        padding: 10px;
    }

    }
</style>
