@{
    ViewData["Title"] = "HR Manager - Employee Performance";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}
<a asp-action="HRManagerDashboard" asp-controller="StaffHome" class="btn btn-secondary">🏠 Back to Dashboard</a>

<h2>📊 Employee Performance</h2>

<div class="d-flex justify-content-between mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addModal">➕ Add Performance</button>
    <input type="text" id="searchInput" class="form-control w-25" placeholder="🔍 Search Employee">
</div>

<table class="table table-bordered table-striped" id="performanceTable">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Employee</th>
            <th>Department</th>
            <th>Rating</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1</td>
            <td>John Doe</td>
            <td>HR</td>
            <td>⭐⭐⭐⭐</td>
            <td>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editModal">✏ Edit</button>
                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">🗑 Delete</button>
            </td>
        </tr>
        <tr>
            <td>2</td>
            <td>Jane Smith</td>
            <td>Finance</td>
            <td>⭐⭐⭐</td>
            <td>
                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editModal">✏ Edit</button>
                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">🗑 Delete</button>
            </td>
        </tr>
    </tbody>
</table>


<!-- Add Performance Modal -->
<div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">➕ Add Employee Performance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label>Employee Name</label>
                        <input type="text" class="form-control" placeholder="Enter Name">
                    </div>
                    <div class="mb-3">
                        <label>Department</label>
                        <input type="text" class="form-control" placeholder="Enter Department">
                    </div>
                    <div class="mb-3">
                        <label>Rating</label>
                        <select class="form-control">
                            <option>⭐⭐⭐⭐⭐ - Excellent</option>
                            <option>⭐⭐⭐⭐ - Good</option>
                            <option>⭐⭐⭐ - Average</option>
                            <option>⭐⭐ - Needs Improvement</option>
                            <option>⭐ - Poor</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">✔ Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">🔙 Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Performance Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">✏ Edit Employee Performance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label>Employee Name</label>
                        <input type="text" class="form-control" value="John Doe">
                    </div>
                    <div class="mb-3">
                        <label>Department</label>
                        <input type="text" class="form-control" value="HR">
                    </div>
                    <div class="mb-3">
                        <label>Rating</label>
                        <select class="form-control">
                            <option selected>⭐⭐⭐⭐ - Good</option>
                            <option>⭐⭐⭐⭐⭐ - Excellent</option>
                            <option>⭐⭐⭐ - Average</option>
                            <option>⭐⭐ - Needs Improvement</option>
                            <option>⭐ - Poor</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">✔ Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">🔙 Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">🗑 Delete Employee Performance</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger">🗑 Delete</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">🔙 Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("searchInput").addEventListener("keyup", function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#performanceTable tbody tr");

        rows.forEach(row => {
            let name = row.cells[1].textContent.toLowerCase();
            let department = row.cells[2].textContent.toLowerCase();
            row.style.display = name.includes(filter) || department.includes(filter) ? "" : "none";
        });
    });
</script>
