@{
    ViewData["Title"] = "HR Manager - Employee Complaints";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<a asp-action="HRManagerDashboard" asp-controller="StaffHome" class="btn btn-secondary">🏠 Back to Dashboard</a>
<h2>⚖ Employee Complaints</h2>

<div class="d-flex justify-content-between mb-3">
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addComplaintModal">➕ Add Complaint</button>
    <input type="text" id="searchInput" class="form-control w-25" placeholder="🔍 Search Complaints">
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped" id="complaintsTable">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Employee Name</th>
                <th>Department</th>
                <th>Complaint</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>John Doe</td>
                <td>IT</td>
                <td>Harassment at Workplace</td>
                <td>2025-03-10</td>
                <td><span class="badge bg-warning">Pending</span></td>
                <td>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editComplaintModal">✏ Edit</button>
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteComplaintModal">🗑 Delete</button>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>Jane Smith</td>
                <td>Finance</td>
                <td>Unfair Salary Deduction</td>
                <td>2025-03-12</td>
                <td><span class="badge bg-success">Resolved</span></td>
                <td>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editComplaintModal">✏ Edit</button>
                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteComplaintModal">🗑 Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Add Complaint Modal -->
<div class="modal fade" id="addComplaintModal" tabindex="-1" aria-labelledby="addComplaintLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addComplaintLabel">➕ Add Employee Complaint</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Employee Name</label>
                        <input type="text" class="form-control" placeholder="Enter Employee Name">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Department</label>
                        <input type="text" class="form-control" placeholder="Enter Department">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Complaint</label>
                        <textarea class="form-control" placeholder="Enter Complaint Details"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-control">
                            <option>Pending</option>
                            <option>Resolved</option>
                            <option>Rejected</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success">✔ Save</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">🔙 Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Complaint Modal -->
<div class="modal fade" id="editComplaintModal" tabindex="-1" aria-labelledby="editComplaintLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editComplaintLabel">✏ Edit Employee Complaint</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label class="form-label">Employee Name</label>
                        <input type="text" class="form-control" value="John Doe">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Department</label>
                        <input type="text" class="form-control" value="IT">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Complaint</label>
                        <textarea class="form-control">Harassment at Workplace</textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input type="date" class="form-control" value="2025-03-10">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <select class="form-control">
                            <option selected>Pending</option>
                            <option>Resolved</option>
                            <option>Rejected</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">✔ Update</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">🔙 Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteComplaintModal" tabindex="-1" aria-labelledby="deleteComplaintLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteComplaintLabel">🗑 Delete Complaint</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this complaint?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger">🗑 Delete</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">🔙 Cancel</button>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("searchInput").addEventListener("keyup", function() {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#complaintsTable tbody tr");

        rows.forEach(row => {
            let name = row.cells[1].textContent.toLowerCase();
            let complaint = row.cells[3].textContent.toLowerCase();
            row.style.display = name.includes(filter) || complaint.includes(filter) ? "" : "none";
        });
    });
</script>
