@{
    ViewData["Title"] = "Lab Inventory";
    Layout = "_StaffLayout";
}

<!-- Back to Dashboard Button -->
<a asp-action="LabTechnicianDashboard" class="btn btn-secondary mb-3">⬅ Back to Dashboard</a>

<h2>🔬 Lab Inventory</h2>

<!-- Add Inventory Item Button -->
<button class="btn btn-primary mb-3" onclick="openModal('addModal')">➕ Add New Item</button>

<!-- Search Input -->
<input type="text" id="searchInput" class="form-control mb-3" placeholder="🔍 Search by Item Name or Category">

<!-- Scrollable Table -->
<div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
    <table class="table table-bordered mt-3" id="inventoryTable">
        <thead class="table-dark">
            <tr>
                <th onclick="sortTable(0)"># ⬆⬇</th>
                <th onclick="sortTable(1)">Item Name ⬆⬇</th>
                <th onclick="sortTable(2)">Category ⬆⬇</th>
                <th onclick="sortTable(3)">Quantity ⬆⬇</th>
                <th onclick="sortTable(4)">Last Updated ⬆⬇</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="inventoryBody">
            <tr>
                <td>1</td>
                <td>Blood Test Kit</td>
                <td>Test Kit</td>
                <td>50</td>
                <td>2025-03-13</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="openModal('viewModal', 'Blood Test Kit', 'Test Kit', '50', '2025-03-13')">ℹ View</button>
                    <button class="btn btn-sm btn-warning" onclick="openModal('editModal')">✏ Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="openModal('deleteModal')">🗑 Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ℹ Inventory Item Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Item Name:</strong> <span id="viewItem"></span></p>
                <p><strong>Category:</strong> <span id="viewCategory"></span></p>
                <p><strong>Quantity:</strong> <span id="viewQuantity"></span></p>
                <p><strong>Last Updated:</strong> <span id="viewDate"></span></p>
            </div>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">➕ Add New Inventory Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label>Item Name:</label>
                <input type="text" class="form-control mb-2" placeholder="Enter item name">

                <label>Category:</label>
                <input type="text" class="form-control mb-2" placeholder="Enter category">

                <label>Quantity:</label>
                <input type="number" class="form-control mb-2" placeholder="Enter quantity">

                <label>Last Updated:</label>
                <input type="date" class="form-control mb-2">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Item</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">✏ Edit Inventory Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label>Item Name:</label>
                <input type="text" class="form-control mb-2" value="Blood Test Kit">

                <label>Category:</label>
                <input type="text" class="form-control mb-2" value="Test Kit">

                <label>Quantity:</label>
                <input type="number" class="form-control mb-2" value="50">

                <label>Last Updated:</label>
                <input type="date" class="form-control mb-2">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">🗑 Delete Inventory Item</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this item? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Open modal function
    function openModal(modalId, item = '', category = '', quantity = '', date = '') {
        if (modalId === 'viewModal') {
            document.getElementById('viewItem').textContent = item;
            document.getElementById('viewCategory').textContent = category;
            document.getElementById('viewQuantity').textContent = quantity;
            document.getElementById('viewDate').textContent = date;
        }
        var modal = new bootstrap.Modal(document.getElementById(modalId));
        modal.show();
    }

    // Search functionality
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#inventoryBody tr");

        rows.forEach(row => {
            let item = row.cells[1].textContent.toLowerCase();
            let category = row.cells[2].textContent.toLowerCase();

            row.style.display = (item.includes(filter) || category.includes(filter)) ? "" : "none";
        });
    });

    // Sorting function
    function sortTable(colIndex) {
        let table = document.getElementById("inventoryTable").getElementsByTagName("tbody")[0];
        let rows = Array.from(table.rows);
        let sortedRows = rows.sort((a, b) => a.cells[colIndex].textContent.trim().localeCompare(b.cells[colIndex].textContent.trim()));
        table.innerHTML = "";
        sortedRows.forEach(row => table.appendChild(row));
    }
</script>
