@{
    ViewData["Title"] = "Collect New Sample";
    Layout = "_StaffLayout";
}

<h2>➕ Collect New Sample</h2>

<form>
    <div class="form-group">
        <label>Patient Name</label>
        <input class="form-control" required />
    </div>

    <div class="form-group">
        <label>Test Type</label>
        <select class="form-control">
            <option>Blood Test</option>
            <option>Urine Test</option>
            <option>X-Ray</option>
            <option>ECG</option>
        </select>
    </div>

    <div class="form-group">
        <label>Sample Type</label>
        <select class="form-control">
            <option>Blood Sample</option>
            <option>Urine Sample</option>
            <option>Saliva Sample</option>
            <option>Tissue Sample</option>
        </select>
    </div>

    <div class="form-group">
        <label>Collection Date</label>
        <input type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Status</label>
        <select class="form-control">
            <option>Pending</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">✅ Save Sample</button>
    <a asp-action="LTManagePatietSamples" class="btn btn-secondary">🔙 Back</a>
</form>
