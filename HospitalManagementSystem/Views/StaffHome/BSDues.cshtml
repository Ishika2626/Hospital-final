@{
    ViewData["Title"] = "Pending Dues";
    Layout = "~/Views/Shared/_StaffLayout.cshtml";
}

<!-- Back to Dashboard Button -->
<a asp-controller="StaffHome" asp-action="BillingStaffDashboard" class="btn btn-secondary mb-3">⬅ Back to Dashboard</a>

<h2>⏳ Pending Dues</h2>

<div class="table-responsive">
    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Patient</th>
                <th>Total Bill</th>
                <th>Amount Paid</th>
                <th>Due Amount</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>John Doe</td>
                <td>$500</td>
                <td>$300</td>
                <td>$200</td>
                <td><span class="badge bg-danger">Unpaid</span></td>
                <td>
                    <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#payModal">💰 Pay</button>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#invoiceModal">📜 Invoice</button>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>Jane Smith</td>
                <td>$700</td>
                <td>$500</td>
                <td>$200</td>
                <td><span class="badge bg-warning">Partial</span></td>
                <td>
                    <button class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#payModal">💰 Pay</button>
                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#invoiceModal">📜 Invoice</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- Payment Modal -->
<div class="modal fade" id="payModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title">💰 Make Payment</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Patient:</strong> John Doe</p>
                <p><strong>Due Amount:</strong> $200</p>
                <label for="paymentAmount" class="form-label">Enter Amount to Pay:</label>
                <input type="number" id="paymentAmount" class="form-control" placeholder="Enter amount">
            </div>
            <div class="modal-footer">
                <button class="btn btn-success">💵 Pay Now</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<!-- Invoice Modal -->
<div class="modal fade" id="invoiceModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title">📜 Invoice Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Patient:</strong> John Doe</p>
                <p><strong>Total Bill:</strong> $500</p>
                <p><strong>Amount Paid:</strong> $300</p>
                <p><strong>Due Amount:</strong> $200</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary">🖨 Print Invoice</button>
                <button class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS & JS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Responsive Table Styling -->
<style>
    .table-responsive {
        max-height: 400px;
        overflow-y: auto;
    }
</style>
