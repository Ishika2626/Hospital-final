@{
    ViewData["Title"] = "Equipment Maintenance";
    Layout = "_StaffLayout";
}

<!-- Back to Dashboard Button -->
<a asp-action="LabTechnicianDashboard" class="btn btn-secondary mb-3">⬅ Back to Dashboard</a>

<h2>🛠 Equipment Maintenance</h2>

<!-- Add Maintenance Record Button -->
<button class="btn btn-primary mb-3" onclick="openModal('addModal')">➕ Add Maintenance Record</button>

<!-- Search Input -->
<input type="text" id="searchInput" class="form-control mb-3" placeholder="🔍 Search by Equipment, Technician, or Status">

<!-- Scrollable Table -->
<div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
    <table class="table table-bordered mt-3" id="maintenanceTable">
        <thead class="table-dark">
            <tr>
                <th onclick="sortTable(0)"># ⬆⬇</th>
                <th onclick="sortTable(1)">Equipment Name ⬆⬇</th>
                <th onclick="sortTable(2)">Maintenance Date ⬆⬇</th>
                <th>Status</th>
                <th onclick="sortTable(4)">Technician ⬆⬇</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="maintenanceBody">
            <tr>
                <td>1</td>
                <td>Centrifuge Machine</td>
                <td>2025-03-10</td>
                <td><span class="badge bg-success">Completed</span></td>
                <td>Dr. John Smith</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="openModal('viewModal', 'Centrifuge Machine', '2025-03-10', 'Completed', 'Dr. John Smith')">ℹ View</button>
                    <button class="btn btn-sm btn-warning" onclick="openModal('editModal')">✏ Update</button>
                    <button class="btn btn-sm btn-danger" onclick="openModal('deleteModal')">🗑 Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- View Modal -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ℹ Maintenance Record Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><strong>Equipment Name:</strong> <span id="viewEquipment"></span></p>
                <p><strong>Maintenance Date:</strong> <span id="viewDate"></span></p>
                <p><strong>Status:</strong> <span id="viewStatus"></span></p>
                <p><strong>Technician:</strong> <span id="viewTechnician"></span></p>
            </div>
        </div>
    </div>
</div>

<!-- Add Modal -->
<div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">➕ Add Maintenance Record</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label>Equipment Name:</label>
                <input type="text" class="form-control mb-2" placeholder="Enter equipment name">

                <label>Maintenance Date:</label>
                <input type="date" class="form-control mb-2">

                <label>Status:</label>
                <select class="form-control">
                    <option>Completed</option>
                    <option>Scheduled</option>
                    <option>In Progress</option>
                </select>

                <label>Technician:</label>
                <input type="text" class="form-control mb-2" placeholder="Enter technician name">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Save Record</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">✏ Update Maintenance Record</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <label>Equipment Name:</label>
                <input type="text" class="form-control mb-2" value="Centrifuge Machine">

                <label>Maintenance Date:</label>
                <input type="date" class="form-control mb-2">

                <label>Status:</label>
                <select class="form-control">
                    <option>Completed</option>
                    <option>Scheduled</option>
                    <option>In Progress</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-warning">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">🗑 Delete Maintenance Record</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this record? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <button type="button" class="btn btn-danger">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Open modal function
    function openModal(modalId, equipment = '', date = '', status = '', technician = '') {
        if (modalId === 'viewModal') {
            document.getElementById('viewEquipment').textContent = equipment;
            document.getElementById('viewDate').textContent = date;
            document.getElementById('viewStatus').textContent = status;
            document.getElementById('viewTechnician').textContent = technician;
        }
        var modal = new bootstrap.Modal(document.getElementById(modalId));
        modal.show();
    }

    // Search functionality
    document.getElementById("searchInput").addEventListener("keyup", function () {
        let filter = this.value.toLowerCase();
        let rows = document.querySelectorAll("#maintenanceBody tr");

        rows.forEach(row => {
            let equipment = row.cells[1].textContent.toLowerCase();
            let technician = row.cells[4].textContent.toLowerCase();
            let status = row.cells[3].textContent.toLowerCase();

            row.style.display = (equipment.includes(filter) || technician.includes(filter) || status.includes(filter)) ? "" : "none";
        });
    });

    // Sorting function
    function sortTable(colIndex) {
        let table = document.getElementById("maintenanceTable").getElementsByTagName("tbody")[0];
        let rows = Array.from(table.rows);
        let sortedRows = rows.sort((a, b) => a.cells[colIndex].textContent.trim().localeCompare(b.cells[colIndex].textContent.trim()));
        table.innerHTML = "";
        sortedRows.forEach(row => table.appendChild(row));
    }
</script>
