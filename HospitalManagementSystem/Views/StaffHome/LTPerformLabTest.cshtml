@{
    ViewData["Title"] = "Conduct Lab Test";
    Layout = "_StaffLayout";
}

<h2>🧪 Conduct Lab Test</h2>

<form>
    <div class="form-group">
        <label>Patient Name</label>
        <input class="form-control" value="John Doe" readonly />
    </div>

    <div class="form-group">
        <label>Test Name</label>
        <input class="form-control" value="Blood Test" readonly />
    </div>

    <div class="form-group">
        <label>Sample Collected?</label>
        <select class="form-control">
            <option selected>Yes</option>
        </select>
    </div>

    <div class="form-group">
        <label>Test Results</label>
        <textarea class="form-control" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label>Status</label>
        <select class="form-control">
            <option>Pending</option>
            <option>Completed</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">✅ Submit Test Results</button>
    <a asp-action="LTConductLabTest" class="btn btn-secondary">🔙 Back</a>
</form>
