@model Payroll
@{
    Layout = "~/Views/Shared/_stafflayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Salary Slip - @Model.PayDate.ToString("yyyy-MM-dd")</h4>
        </div>
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-sm-4 font-weight-bold">Employee ID:</div>
                <div class="col-sm-8">@Model.EmployeeId</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 font-weight-bold">Base Salary:</div>
                <div class="col-sm-8">@Model.BaseSalary.ToString("C")</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 font-weight-bold">Bonuses:</div>
                <div class="col-sm-8">@Model.Bonuses.ToString("C")</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 font-weight-bold">Overtime:</div>
                <div class="col-sm-8">@Model.Overtime.ToString("C")</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 font-weight-bold">Deductions:</div>
                <div class="col-sm-8">@Model.Deductions.ToString("C")</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 font-weight-bold">Total Salary:</div>
                <div class="col-sm-8">@Model.TotalSalary.ToString("C")</div>
            </div>
            <div class="row mb-2">
                <div class="col-sm-4 font-weight-bold">Payment Method:</div>
                <div class="col-sm-8">@Model.PaymentMethod</div>
            </div>

            <div class="text-right mt-4">
                <form method="get" action="@Url.Action("DownloadSalarySlip", "StaffHome")">
                    <input type="hidden" name="payDate" value="@Model.PayDate.ToString("yyyy-MM-dd")" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-file-pdf"></i> Download PDF
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
