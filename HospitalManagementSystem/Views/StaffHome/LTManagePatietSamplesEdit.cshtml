@{
    ViewData["Title"] = "Update Sample Information";
    Layout = "_StaffLayout";
}

<h2>✏ Update Sample Information</h2>

<form>
    <div class="form-group">
        <label>Patient Name</label>
        <input class="form-control" value="John Doe" readonly />
    </div>

    <div class="form-group">
        <label>Test Type</label>
        <input class="form-control" value="Blood Test" readonly />
    </div>

    <div class="form-group">
        <label>Sample Type</label>
        <input class="form-control" value="Blood Sample" readonly />
    </div>

    <div class="form-group">
        <label>Collection Date</label>
        <input type="date" class="form-control" value="2025-03-13" required />
    </div>

    <div class="form-group">
        <label>Status</label>
        <select class="form-control">
            <option selected>Pending</option>
            <option>Processed</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">💾 Save Changes</button>
    <a asp-action="LTManagePatietSamples" class="btn btn-secondary">🔙 Back</a>
</form>
