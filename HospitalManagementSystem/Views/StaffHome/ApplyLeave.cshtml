@model HospitalManagementSystem.Models.LeaveRequest
@{
    Layout = "~/Views/Shared/_stafflayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">📅 Apply for Leave</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <form asp-action="ApplyLeave" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="LeaveStartDate" class="form-label">Start Date</label>
            <input asp-for="LeaveStartDate" type="date" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label asp-for="LeaveEndDate" class="form-label">End Date</label>
            <input asp-for="LeaveEndDate" type="date" class="form-control" required />
        </div>

        <div class="col-md-6">
            <label asp-for="LeaveType" class="form-label">Leave Type</label>
            <select asp-for="LeaveType" class="form-select" required>
                <option selected disabled>-- Select Type --</option>
                <option>Annual Leave</option>
                <option>Casual Leave</option>
                <option>Sick Leave</option>
                <option>Maternity Leave</option>
                <option>Other</option>
            </select>
        </div>

        <div class="col-12">
            <label asp-for="Reason" class="form-label">Reason</label>
            <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Optional"></textarea>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary px-4">Submit</button>
        </div>
    </form>
</div>
