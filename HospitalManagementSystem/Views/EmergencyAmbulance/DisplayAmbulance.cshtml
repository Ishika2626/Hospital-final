@model IEnumerable<HospitalManagementSystem.Models.Ambulance>

@{
    Layout = "~/Views/Shared/admin.cshtml"; // Set the layout if needed
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ambulances - Hospital System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #2a5298;
            color: white;
            text-align: center;
            font-weight: bold;
        }

        .card-body {
            text-align: center;
            padding: 20px;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .btn {
            padding: 5px 10px;
        }

        .action-icons i {
            font-size: 18px;
            cursor: pointer;
        }

            .action-icons i:hover {
                color: #007bff;
            }

        .gradient-text {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card p-3">
            <h2 class="text-center mb-3 gradient-text">
                <i class="fa-solid fa-ambulance"></i> Ambulance Records
            </h2>

            <div class="row">
                @foreach (var ambulance in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-header">
                                Ambulance ID: @ambulance.AmbulanceID
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">Ambulance Number: @ambulance.AmbulanceNumber</h5>
                               @*  <div class="action-buttons">
                                    <a href="@Url.Action("EditAmbulance", "EmergencyAmbulance", new { id = ambulance.AmbulanceID })" class="btn btn-warning" title="Edit">
                                        <i class="fa-solid fa-edit"></i> Edit
                                    </a>
                                    <a href="@Url.Action("DeleteAmbulance", "EmergencyAmbulance", new { id = ambulance.AmbulanceID })" class="btn btn-danger" title="Delete" onclick="return confirm('Are you sure you want to delete this ambulance?')">
                                        <i class="fa-solid fa-trash"></i> Delete
                                    </a>
                                </div> *@
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
