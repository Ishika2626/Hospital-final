@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Clinical Reporting</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayClinicalReports","ReportsAnalytics")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Clinical Report List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-notes-medical"></i> Clinical Report Entry
            </div>

            <div class="card-body">
                <form id="clinicalReportForm">
                    <div class="row">
                        <!-- Patient ID -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-id-badge"></i> Patient ID</label>
                            <input type="text" class="form-control" id="patient_id" placeholder="Enter patient ID" required>
                        </div>

                        <!-- Doctor ID -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user-md"></i> Doctor ID</label>
                            <input type="text" class="form-control" id="doctor_id" placeholder="Enter doctor ID" required>
                        </div>

                        <!-- Diagnosis -->
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-diagnoses"></i> Diagnosis</label>
                            <input type="text" class="form-control" id="diagnosis" placeholder="Enter diagnosis" required>
                        </div>

                        <!-- Treatment Plan -->
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-file-medical"></i> Treatment Plan</label>
                            <textarea class="form-control" id="treatment_plan" placeholder="Enter treatment plan"></textarea>
                        </div>

                        <!-- Treatment Start Date -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar-plus"></i> Treatment Start Date</label>
                            <input type="date" class="form-control" id="treatment_start_date" required>
                        </div>

                        <!-- Treatment End Date -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar-minus"></i> Treatment End Date</label>
                            <input type="date" class="form-control" id="treatment_end_date">
                        </div>

                        <!-- Outcome -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-heartbeat"></i> Outcome</label>
                            <select class="form-control" id="outcome" required>
                                <option value="">Select Outcome</option>
                                <option value="Recovered">Recovered</option>
                                <option value="Ongoing">Ongoing</option>
                                <option value="Critical">Critical</option>
                                <option value="Deceased">Deceased</option>
                            </select>
                        </div>

                        <!-- Notes -->
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-sticky-note"></i> Notes</label>
                            <textarea class="form-control" id="notes" placeholder="Enter additional notes"></textarea>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-floppy-disk"></i> Save Report
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
       
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>