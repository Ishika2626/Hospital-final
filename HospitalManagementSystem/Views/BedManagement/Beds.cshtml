@model HospitalManagementSystem.Models.Beds

@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Manage Beds</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control, .form-select {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }

        .back-btn {
            margin-left: 40px;
        }
    </style>
</head>
<body>
    <div class="col-md-2 back-btn">
        <a href="@Url.Action("DisplayBeds", "BedManagement")" class="btn btn-danger btn-sm px-3 py-2" style="font-size: 14px; background: linear-gradient(to right, #1e3c72, #2a5298); border: none;">
            <i class="fa-solid fa-list"></i> Manage Beds List
        </a>
    </div>

    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-bed"></i> Manage Beds
            </div>

            <div class="card-body">
                <form asp-action="Beds" asp-controller="BedManagement" method="post">


                    <input type="hidden" asp-for="BedID" />

                    <div class="row">

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-hospital"></i> Room Number</label>
                            @Html.DropDownListFor(m => m.RoomID, ViewBag.RoomTypes as List<SelectListItem>, "-- Select Room --", new { @class = "form-control", required = "required" })
                        </div>


                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-bed"></i> Bed Number</label>
                            <input type="text" class="form-control" asp-for="BedNumber" placeholder="Enter Bed Number" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-procedures"></i> Bed Type</label>
                            <select class="form-select" asp-for="BedType" required>
                                <option value="">-- Select Type --</option>
                                <option value="General">General</option>
                                <option value="ICU">ICU</option>
                                <option value="Emergency">Emergency</option>
                                <option value="Pediatric">Pediatric</option>
                                <option value="Maternity">Maternity</option>
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-circle-check"></i> Status</label>
                            <select class="form-select" asp-for="Status" required>
                                <option value="">-- Select Status --</option>
                                <option value="Available">Available</option>
                                <option value="Occupied">Occupied</option>
                                <option value="Reserved">Reserved</option>
                                <option value="Maintenance">Maintenance</option>
                            </select>
                        </div>

                       
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-floppy-disk"></i> Save Bed
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
