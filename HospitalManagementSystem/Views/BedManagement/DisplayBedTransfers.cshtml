@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bed Transfer Management - Hospital System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
        }

        .table td, .table th {
            text-align: center;
            vertical-align: middle;
        }

        .btn {
            padding: 5px 10px;
        }

        .search-bar {
            width: 300px;
        }

        .action-icons i {
            font-size: 18px;
            margin: 0 5px;
            cursor: pointer;
        }

            .action-icons i:hover {
                color: #007bff;
            }

        .reason-text {
            max-width: 300px;
            word-wrap: break-word;
            font-size: 14px;
        }

        .gradient-text {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card p-3">
            <h2 class="text-center mb-3 gradient-text">
                <i class="fa-solid fa-exchange-alt"></i> Bed Transfer Management
            </h2>

            <!-- Search & Add New Transfer -->
            <div class="d-flex justify-content-between mb-3">
                <input type="text" class="form-control search-bar" placeholder="🔍 Search Transfers..." id="searchTransfers">
                <a href="@Url.Action("BedTransfers","BedManagement")" class="btn btn-success">
                    <i class="fa-solid fa-plus"></i> Add New Transfer
                </a>
            </div>

            <!-- Bed Transfer Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Patient ID</th>
                            <th>Old Bed ID</th>
                            <th>New Bed ID</th>
                            <th>Transfer Date</th>
                            <th>Reason</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="transferTable">
                        <tr>
                            <td>1</td>
                            <td>1003</td>
                            <td>B-102</td>
                            <td>B-205</td>
                            <td>2025-03-12 10:15:00</td>
                            <td class="reason-text">Upgraded to ICU for better monitoring</td>
                            <td class="action-icons">
                                <i class="fa-solid fa-pen-to-square text-warning"></i>
                                <i class="fa-solid fa-trash text-danger"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>1007</td>
                            <td>B-305</td>
                            <td>B-102</td>
                            <td>2025-03-10 15:40:00</td>
                            <td class="reason-text">Transferred to general ward for recovery</td>
                            <td class="action-icons">
                                <i class="fa-solid fa-pen-to-square text-warning"></i>
                                <i class="fa-solid fa-trash text-danger"></i>
                            </td>
                        </tr>
                        <!-- Dynamic transfer data will be inserted here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
