@model HospitalManagementSystem.Models.Room_Occupancy

@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Manage Room Occupancy</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control, .form-select {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayRoomOccupancy","BedManagement")" class="btn btn-danger btn-sm px-3 py-2" style="font-size: 14px; background: linear-gradient(to right, #1e3c72, #2a5298); border: none;">
            <i class="fa-solid fa-list"></i> View Room Occupancy
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-door-open"></i> Manage Room Occupancy
            </div>
            <div class="card-body">
                <form asp-action="SaveRoomOccupancy" asp-controller="BedManagement" method="post">
                    <!-- Hidden field to handle RoomOccupancyID -->
                    <input type="hidden" asp-for="RoomOccupancyID" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-hospital"></i> Room ID</label>
                            <input type="number" class="form-control" asp-for="RoomID" placeholder="Enter Room ID" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-bed"></i> Current Occupancy</label>
                            <input type="number" class="form-control" asp-for="CurrentOccupancy" placeholder="Enter Number of Beds Occupied" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-chart-bar"></i> Max Capacity</label>
                            <input type="number" class="form-control" asp-for="MaxCapacity" placeholder="Enter Total Beds in Room" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-circle-check"></i> Status</label>
                            <select class="form-select" asp-for="Status" required>
                                <option value="Available">Available</option>
                                <option value="Full">Full</option>
                            </select>
                        </div>
                        @* <div class="col-md-12 mb-3"> *@
                        @*     <label class="form-label"><i class="fa-solid fa-clock"></i> Last Updated</label> *@
                        @*     <input type="datetime-local" class="form-control" asp-for="LastUpdated" disabled /> *@
                        @* </div> *@
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-floppy-disk"></i> Save Occupancy
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
