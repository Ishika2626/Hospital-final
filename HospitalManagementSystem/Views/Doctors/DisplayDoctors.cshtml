@model IEnumerable<HospitalManagementSystem.Models.Doctor>

@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Doctors Management - Hospital System</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table td, .table th {
            text-align: center;
            vertical-align: middle;
        }

        .btn {
            padding: 5px 10px;
        }

        .search-bar {
            width: 300px;
        }

        .action-icons i {
            font-size: 18px;
            margin: 0 5px;
            cursor: pointer;
        }

            .action-icons i:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card p-3">
            <h2 class="text-center text-primary mb-3">
                <i class="fa-solid fa-user-md"></i> Doctors Management
            </h2>

            <div class="d-flex justify-content-between mb-3">
                <input type="text" class="form-control search-bar" placeholder="🔍 Search Doctors..." id="searchDoctors" />
                <a href="@Url.Action("Doctors", "Doctors")" class="btn btn-success">
                    <i class="fa-solid fa-user-plus"></i> Add New Doctor
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Gender</th>
                            <th>DOB</th>
                            <th>Qualification</th>
                            <th>Experience</th>
                            <th>Status</th>
                            <th>Department</th>
                            <th>Photo</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="doctorTable">
                        @if (Model != null && Model.Any())
                        {
                            int count = 1;
                            foreach (var doc in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@doc.FullName </td>
                                    <td>@doc.Email</td>
                                    <td>@doc.PhoneNumber</td>
                                    <td>@doc.Gender</td>
                                    <td>@doc.DateOfBirth.ToShortDateString()</td>
                                    <td>@doc.Qualification</td>
                                    <td>@doc.Experience</td>
                                    <td>@doc.Status</td>
                                    <td>@doc.DepartmentId</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(doc.Img))
                                        {
                                            <img src="@Url.Content(doc.Img)" alt="Patient Photo" width="100" height="100" />
                                        }
                                        else
                                        {
                                            <span>No Image</span>
                                        }
                                    </td>
                                    <td class="action-icons">
                                        
                                        <a href="@Url.Action("EditDoctor", "Doctors", new { id = doc.DoctorId })" title="Edit">
                                            <i class="fa-solid fa-pen text-warning"></i>
                                        </a>
                                        <a href="@Url.Action("DeleteDoctor", "Doctors", new { id = doc.DoctorId })" title="Delete">
                                            <i class="fa-solid fa-trash text-danger"></i>
                                        </a>
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-danger text-center">No doctors found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
