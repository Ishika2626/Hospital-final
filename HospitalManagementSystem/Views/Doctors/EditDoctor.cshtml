@model HospitalManagementSystem.Models.Doctor

@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Edit Doctor</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .btn {
            width: 100%;
        }

        .form-control {
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <div class="col-md-1" style="margin-left:40px;">
        <a href="@Url.Action("DisplayDoctors","Doctors")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Doctors List
        </a>
    </div>

    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-user-md"></i> Edit Doctor
            </div>

            <div class="card-body">
                <form asp-action="EditDoctor" asp-controller="Doctors" enctype="multipart/form-data" method="post">
                    <input type="hidden" asp-for="DoctorId" />

                    <div class="row">
                        <!-- Full Name -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user"></i> Full Name</label>
                            <input type="text" class="form-control" asp-for="FullName" required />
                        </div>

                        <!-- Email -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-envelope"></i> Email</label>
                            <input type="email" class="form-control" asp-for="Email" required />
                        </div>

                        <!-- Phone -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-phone"></i> Phone</label>
                            <input type="text" class="form-control" asp-for="PhoneNumber" required />
                        </div>

                        <!-- Gender -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-venus-mars"></i> Gender</label>
                            <select class="form-control" asp-for="Gender" required>
                                <option value="">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <!-- Date of Birth -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> DOB</label>
                            <input type="date" class="form-control" asp-for="DateOfBirth" required />
                        </div>

                        <!-- Qualification -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user-graduate"></i> Qualification</label>
                            <input type="text" class="form-control" asp-for="Qualification" required />
                        </div>

                        <!-- Experience -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-briefcase"></i> Experience (Years)</label>
                            <input type="number" class="form-control" asp-for="Experience" required />
                        </div>

                        <!-- Status -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-toggle-on"></i> Status</label>
                            <select class="form-control" asp-for="Status" required>
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="On Leave">On Leave</option>
                            </select>
                        </div>

                        <!-- Password -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-key"></i> Password</label>
                            <input type="text" class="form-control" asp-for="Password" required />
                        </div>

                        <!-- Department -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-hospital"></i> Department</label>
                            @Html.DropDownListFor(m => m.DepartmentId, (IEnumerable<SelectListItem>)ViewBag.getDepartment,
                                     "-- Select Department --", new { @class = "form-control", required = "required" })
                        </div>

                        <!-- Upload New Profile Image -->
                        <div class="col-md-6 mb-3">
                            @if (!string.IsNullOrEmpty(Model.Img))
                            {
                                <label>Current Profile Image</label>
                                <img src="@Url.Content(Model.Img)" alt="Doctor Image" width="100" height="100" class="mb-2" />
                            }

                            <label><i class="fa-solid fa-image"></i> Upload New Profile Image</label>
                            <input type="file" name="doctor_img" class="form-control" />
                        </div>

                    </div>

                    <!-- Buttons -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-floppy-disk"></i> Update Doctor
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
