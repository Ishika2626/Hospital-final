@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Audit Logs</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control, .form-select {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayAuditLogs","Security")" class="btn btn-danger btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> User Roles List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-clipboard-list"></i> Audit Logs
            </div>
            <div class="card-body">
                <!-- Filter Form -->
                <form id="auditLogFilterForm">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user"></i> User ID</label>
                            <input type="number" class="form-control" id="user_id" placeholder="Enter User ID">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label"><i class="fa-solid fa-tasks"></i> Action Type</label>
                            <select class="form-select" id="action_type">
                                <option value="">All Actions</option>
                                <option value="Login">Login</option>
                                <option value="View Patient Record">View Patient Record</option>
                                <option value="Update Prescription">Update Prescription</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label"><i class="fa-solid fa-database"></i> Table Name</label>
                            <input type="text" class="form-control" id="table_name" placeholder="Enter Table Name">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Date From</label>
                            <input type="date" class="form-control" id="date_from">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Date To</label>
                            <input type="date" class="form-control" id="date_to">
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label d-block">&nbsp;</label>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-filter"></i> Apply Filters
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

       
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
