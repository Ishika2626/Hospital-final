@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>User Roles Management - Hospital System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table td, .table th {
            text-align: center;
            vertical-align: middle;
        }

        .btn {
            padding: 5px 10px;
        }

        .search-bar {
            width: 300px;
        }

        .action-icons i {
            font-size: 18px;
            margin: 0 5px;
            cursor: pointer;
        }

            .action-icons i:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card p-3">
            <h2 class="text-center text-primary mb-3">
                <i class="fa-solid fa-user-shield"></i> User Roles Management
            </h2>

            <!-- Search & Add New Role -->
            <div class="d-flex justify-content-between mb-3">
                <input type="text" class="form-control search-bar" placeholder="🔍 Search Roles..." id="searchRoles">
                <a href="@Url.Action("UserRoles","Security")" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Add New Role
                </a>
            </div>

            <!-- User Roles Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Role ID</th>
                            <th>Role Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="rolesTable">
                        <tr>
                            <td>1</td>
                            <td>R-101</td>
                            <td>Administrator</td>
                            <td class="action-icons">
                                <i class="fa-solid fa-pen-to-square text-warning"></i>
                                <i class="fa-solid fa-trash text-danger"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>R-102</td>
                            <td>Doctor</td>
                            <td class="action-icons">
                                <i class="fa-solid fa-pen-to-square text-warning"></i>
                                <i class="fa-solid fa-trash text-danger"></i>
                            </td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>R-103</td>
                            <td>Nurse</td>
                            <td class="action-icons">
                                <i class="fa-solid fa-pen-to-square text-warning"></i>
                                <i class="fa-solid fa-trash text-danger"></i>
                            </td>
                        </tr>
                        <!-- Dynamic roles records will be inserted here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
