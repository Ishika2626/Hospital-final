@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Audit Logs - Hospital System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table td, .table th {
            text-align: center;
            vertical-align: middle;
        }

        .btn {
            padding: 5px 10px;
        }

        .search-bar {
            width: 300px;
        }

        .action-icons i {
            font-size: 18px;
            margin: 0 5px;
            cursor: pointer;
        }

            .action-icons i:hover {
                color: #007bff;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="card p-3">
            <h2 class="text-center text-primary mb-3">
                <i class="fa-solid fa-clipboard-list"></i> Audit Logs
            </h2>

            <!-- Search Logs -->
            <div class="d-flex justify-content-between mb-3">
                <input type="text" class="form-control search-bar" placeholder="🔍 Search Logs..." id="searchLogs">
                <a href="@Url.Action("AuditLogs","Security")" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Add New Role
                </a>
            </div>
           
            <!-- Audit Logs Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Log ID</th>
                            <th>User ID</th>
                            <th>Action Type</th>
                            <th>Affected Table</th>
                            <th>Record ID</th>
                            <th>Timestamp</th>
                            <th>IP Address</th>
                            <th>User Agent</th>
                        </tr>
                    </thead>
                    <tbody id="logsTable">
                        <tr>
                            <td>1</td>
                            <td>LOG-101</td>
                            <td>U-234</td>
                            <td>Login</td>
                            <td>-</td>
                            <td>-</td>
                            <td>2024-03-12 10:15:23</td>
                            <td>192.168.1.1</td>
                            <td>Mozilla/5.0 (Windows NT 10.0; Win64)</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>LOG-102</td>
                            <td>U-125</td>
                            <td>Update Prescription</td>
                            <td>prescriptions</td>
                            <td>456</td>
                            <td>2024-03-12 11:05:40</td>
                            <td>203.45.12.34</td>
                            <td>Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)</td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>LOG-103</td>
                            <td>U-198</td>
                            <td>View Patient Record</td>
                            <td>patients</td>
                            <td>789</td>
                            <td>2024-03-12 12:30:10</td>
                            <td>156.87.23.10</td>
                            <td>Mozilla/5.0 (iPhone; CPU iPhone OS 15_0 like Mac OS X)</td>
                        </tr>
                        <!-- Dynamic logs will be inserted here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
