@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/userLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Appointment | Hospital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7fc;
        }

        .appointment-container {
            max-width: 900px;
            margin: auto;
            background: white;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            overflow: hidden;
            margin-top: 100px;
            margin-bottom: 100px;
        }

        .left-section {
            padding: 30px;
            background: white;
        }

        .right-section {
            background: linear-gradient(to right, #007bff, #0056b3);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 40px;
        }

            .right-section h3 {
                font-size: 24px;
                font-weight: bold;
            }

        .form-control, .form-select {
            border-radius: 5px;
            box-shadow: none;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: #007bff;
                box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
            }

        .submit-btn {
            background: #007bff;
            color: white;
            width: 100%;
            padding: 10px;
            border-radius: 5px;
            font-weight: bold;
        }

            .submit-btn:hover {
                background: #0056b3;
            }

        @@media (max-width: 768px) {
            .right-section

        {
            display: none;
        }

        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row appointment-container">
            <!-- Left Section (Form) -->
            <div class="col-md-6 left-section">
                <h3 class="text-center mb-4">Book an Appointment</h3>
                <form>
                    <div class="mb-3">
                        <label class="form-label">Select Doctor</label>
                        <select class="form-select" required>
                            <option value="">-- Choose Doctor --</option>
                            <option value="Dr. John Doe">Dr. John Doe (Cardiologist)</option>
                            <option value="Dr. Sarah Smith">Dr. Sarah Smith (Neurologist)</option>
                            <option value="Dr. Mark Wilson">Dr. Mark Wilson (Orthopedic)</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-control" required placeholder="Enter your name">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contact Number</label>
                        <input type="tel" class="form-control" required placeholder="Enter your phone number">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" required placeholder="Enter your email">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Select Date</label>
                        <input type="date" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Select Time Slot</label>
                        <select class="form-select" required>
                            <option value="">-- Choose Time Slot --</option>
                            <option value="10:00 AM - 11:00 AM">10:00 AM - 11:00 AM</option>
                            <option value="11:00 AM - 12:00 PM">11:00 AM - 12:00 PM</option>
                            <option value="2:00 PM - 3:00 PM">2:00 PM - 3:00 PM</option>
                            <option value="4:00 PM - 5:00 PM">4:00 PM - 5:00 PM</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Appointment Type</label>
                        <select class="form-select" required>
                            <option value="In-Person">In-Person Consultation</option>
                            <option value="Online">Online Consultation (Video Call)</option>
                        </select>
                    </div>

                    <button type="submit" class="btn submit-btn">Confirm Appointment</button>
                </form>
            </div>

            <!-- Right Section (Image / Branding) -->
            <div class="col-md-6 right-section">
                <div>
                    <h3>Welcome to Our Hospital</h3>
                    <p>Book an appointment with our expert doctors and get the best medical care.</p>
                    <img src="/img/CureLife Hospital.png" alt="Hospital Logo" class="img-fluid mt-3">
                </div>
            </div>
        </div>
    </div>

</body>
</html>
