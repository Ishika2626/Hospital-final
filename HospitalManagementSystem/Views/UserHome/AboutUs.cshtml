@{
    ViewData["Title"] = "About US";
}

@{
    Layout = "~/Views/Shared/userLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us | CureLife Hospital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }

        

        /* About Section */
        .about-section {
            padding: 60px 20px;
        }

        .about-img {
            max-width: 100%;
            border-radius: 10px;
        }

        /* Mission & Vision */
        .mission-vision {
            background: #007bff;
            color: white;
            padding: 60px 20px;
            text-align: center;
        }

        /* Core Values */
        .values-container {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
        }

        .value-card {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            max-width: 300px;
        }

        /* Team Section */
        .team-section {
            padding: 60px 20px;
            text-align: center;
        }

        .team-member {
            text-align: center;
            transition: transform 0.3s;
        }

            .team-member img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
                object-fit: cover;
                margin-bottom: 15px;
                transition: transform 0.3s;
            }

            .team-member:hover {
                transform: scale(1.05);
            }
    </style>
</head>
<body>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="hero-content">
            <h1 class="display-4">Who We Are</h1>
            <p class="lead">Delivering Excellence in Healthcare</p>
        </div>
    </section>

    <style>
        .hero-section {
            background: url('https://source.unsplash.com/1600x600/?hospital,medical') center/cover no-repeat;
            position: relative;
            height: 130px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            color: white;
            margin-top:100px;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to right, rgba(0, 123, 255, 0.8), rgba(0, 255, 255, 0.6));
        }

        .hero-content {
            position: relative;
            z-index: 2;
            animation: fadeIn 1.2s ease-in-out;
        }

        keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }
    </style>

    <!-- About Us -->
    <section class="container about-section">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h3>Who We Are</h3>
                <p>
                    CureLife Hospital is a leading healthcare institution providing cutting-edge medical services with compassionate care. We are committed to excellence, innovation, and patient-centered treatment.
                </p>
                <p>
                    Our hospital is equipped with state-of-the-art technology, world-class specialists, and a warm environment to ensure the best healthcare experience.
                </p>
            </div>
            <div class="col-md-6 text-center">
                <img src="~/img/hospital-1802680_1280.jpg" alt="Hospital" class="about-img">
            </div>
        </div>
    </section>

    <!-- Mission & Vision -->
    <section class="mission-vision">
        <h3>Our Mission & Vision</h3>
        <div class="row mt-4 justify-content-center">
            <div class="col-md-5">
                <h5><i class="bi bi-heart-pulse text-warning"></i> Our Mission</h5>
                <p>To enhance lives by providing accessible, high-quality healthcare with compassion and innovation.</p>
            </div>
            <div class="col-md-5">
                <h5><i class="bi bi-eye text-light"></i> Our Vision</h5>
                <p>To be a globally recognized healthcare provider, setting the standard in medical excellence and patient care.</p>
            </div>
        </div>
    </section>

    <!-- Core Values -->
    <section class="container text-center py-5">
        <h3>Our Core Values</h3>
        <div class="values-container mt-4">
            <div class="value-card">
                <h5><i class="bi bi-people text-success"></i> Patient First</h5>
                <p>We prioritize patient well-being above all.</p>
            </div>
            <div class="value-card">
                <h5><i class="bi bi-lightbulb text-primary"></i> Innovation</h5>
                <p>Embracing technology for better healthcare solutions.</p>
            </div>
            <div class="value-card">
                <h5><i class="bi bi-shield-lock text-danger"></i> Integrity</h5>
                <p>Maintaining the highest ethical standards.</p>
            </div>
            <div class="value-card">
                <h5><i class="bi bi-geo-alt text-warning"></i> Accessibility</h5>
                <p>Quality healthcare for everyone, everywhere.</p>
            </div>
        </div>
    </section>

    <!-- Our Team -->
    <section class="container team-section">
        <h3>Meet Our Doctors</h3>
        <div class="row mt-4 justify-content-center">
            <div class="col-md-3 team-member">
                <img src="~/img/360_F_136187711_qeBMOwkPdTg1dCN8e5TR1AmduXDz60Xn.jpg" alt="Doctor">
                <h5>Dr. John Smith</h5>
                <p>Cardiologist</p>
            </div>
            <div class="col-md-3 team-member">
                <img src="~/img/nurse-2019420_1280.jpg" alt="Doctor">
                <h5>Dr. Emily Rose</h5>
                <p>Neurologist</p>
            </div>
            <div class="col-md-3 team-member">
                <img src="~/img/istockphoto-1346124900-612x612.jpg" alt="Doctor">
                <h5>Dr. Michael Lee</h5>
                <p>Orthopedic Surgeon</p>
            </div>
            <div class="col-md-3 team-member">
                <img src="~/img/istockphoto-1425798958-612x612.jpg" alt="Doctor">
                <h5>Dr. Susan White</h5>
                <p>Pediatrician</p>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
