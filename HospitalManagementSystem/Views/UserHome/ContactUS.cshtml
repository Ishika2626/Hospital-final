@{
    ViewData["Title"] = "Contact Us";
}

@{
    Layout = "~/Views/Shared/userLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us | CureLife Hospital</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Banner Section */
        .contact-banner {
            background: linear-gradient(to right, rgba(0, 123, 255, 0.7), rgba(0, 255, 255, 0.5)), url('/images/contact-banner.jpg') center no-repeat;
            color: white;
            padding: 25px 20px;
            text-align: center;
            margin-bottom: 40px;
            margin-top:100px;
        }

        /* Contact Details */
        .contact-details {
            padding: 40px 0;
        }

        .contact-info {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Contact Form */
        .contact-form {
            padding: 30px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Map */
        .map-container {
            padding: 40px 0;
            text-align: center;
        }

            .map-container iframe {
                width: 100%;
                height: 350px;
                border-radius: 10px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }
    </style>
</head>
<body>

    <!-- Banner -->
    <section class="contact-banner">
        <h1>Contact Us</h1>
        <p>Get in touch with CureLife Hospital for any queries or assistance.</p>
    </section>

    <section class="container contact-details">
    <div class="row align-items-center">
        <!-- Left Side: Contact Details -->
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <div class="contact-info">
                        <i class="bi bi-geo-alt fs-1 text-primary"></i>
                        <h5>Our Location</h5>
                        <p>123, Health Street, Your City, Your Country</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="contact-info">
                        <i class="bi bi-telephone fs-1 text-success"></i>
                        <h5>Call Us</h5>
                        <p>+123 456 7890</p>
                    </div>
                </div>
                <div class="col-md-12 mt-3">
                    <div class="contact-info">
                        <i class="bi bi-envelope fs-1 text-danger"></i>
                        <h5>Email Us</h5>
                        <p>info@curelifehospital.com</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side: Contact Form -->
        <div class="col-md-6">
            <div class="contact-form">
                <h3 class="text-center mb-4">Send Us a Message</h3>
                <form>
                    <div class="mb-3">
                        <label for="name" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Enter your name">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label for="message" class="form-label">Message</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="Type your message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Message</button>
                </form>
            </div>
        </div>
    </div>
</section>

    <!-- Google Map -->
    <section class="map-container">
        <h3>Find Us on Google Maps</h3>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3151.8354345093705!2d144.96305791531685!3d-37.81627937975153!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x6ad642af0f11fd81%3A0xf57772d79d5862b1!2sHospital!5e0!3m2!1sen!2sus!4v1625304106653!5m2!1sen!2sus" allowfullscreen="" loading="lazy"></iframe>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
