@{

    Layout = "~/Views/Shared/userLayout.cshtml";
}
@{
    ViewBag.Title = "Hospital Insurance Companies";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hospital Insurance Companies</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
            margin-top: 100px;
        }

        .container {
            margin-top: 30px;
        }

        .heading-container {
            text-align: center;
            margin: 30px 0;
        }

        .heading-title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #fff;
            background: linear-gradient(90deg, #007bff, #0056b3);
            display: inline-block;
            padding: 12px 25px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        /* Adding a separate underline using a div */
        .heading-underline {
            width: 120px;
            height: 4px;
            background: #ffc107;
            margin: 8px auto 0;
            border-radius: 2px;
        }





        .card {
            border-radius: 10px;
            transition: 0.3s;
        }

            .card:hover {
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
                transform: scale(1.05);
            }

        .card-title {
            color: #2c3e50;
            font-weight: bold;
        }

        .contact {
            font-weight: bold;
            color: #007bff;
        }

        .footer {
            text-align: center;
            margin-top: 30px;
            padding: 15px;
            background: #2c3e50;
            color: white;
            border-radius: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="heading-container">
            <h2 class="heading-title">Hospital Insurance Companies</h2>
            <div class="heading-underline"></div>
        </div>



        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
