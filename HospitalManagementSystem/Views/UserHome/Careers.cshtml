@model List<HospitalManagementSystem.Models.HiringManagement>

@{
    ViewBag.Title = "Careers at Our Hospital";
    Layout = "~/Views/Shared/userlayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #eef2f5;
        padding-top: 80px;
        font-family: 'Segoe UI', sans-serif;
        line-height: 1.6;
    }

    .hero-section {
        background: linear-gradient(135deg, #2b67f6, #4fd1c5);
        color: white;
        padding: 80px 20px;
        text-align: center;
        border-radius: 0 0 50px 50px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }

        .hero-section h1 {
            font-size: 3rem;
            font-weight: bold;
        }

        .hero-section p {
            font-size: 1.2rem;
            margin-top: 15px;
        }

    .section-header {
        text-align: center;
        margin-top: 60px;
        margin-bottom: 10px;
        border-bottom: 3px solid #4fd1c5;
        display: inline-block;
        padding-bottom: 5px;
        color: #2b67f6;
        font-size: 1.75rem;
        font-weight: 700;
        width: 100%;
    }

    .section-subtitle {
        text-align: center;
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 25px;
    }

    .custom-card {
        background-color: #ffffff;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        transition: all 0.3s ease-in-out;
    }

        .custom-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 28px rgba(0,0,0,0.1);
        }

    .testimonial {
        font-style: italic;
        font-size: 1rem;
        color: #343a40;
    }

    .form-section {
        background: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    }

    .form-control {
        border-radius: 8px;
        padding: 10px 14px;
    }

    .btn-gradient {
        background: linear-gradient(to right, #2b67f6, #4fd1c5);
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px 25px;
        border-radius: 8px;
        transition: background 0.3s ease-in-out;
    }

        .btn-gradient:hover {
            background: linear-gradient(to right, #1c4ed8, #34bdb1);
        }

    @@media (max-width: 768px) {
        .hero-section h1 {
            font-size: 2.2rem;
        }
    }

    .form-section h2,
    .form-section p,
    .job-section h2,
    .job-section p {
        text-align: center;
    }
</style>

<!-- HERO SECTION -->
<div class="hero-section">
    <h1>🚑 Careers at Our Hospital</h1>
    <p>Join a team that's passionate about healing, helping, and making a difference.</p>
</div>

<div class="container py-5">

    <div class="row mb-5">
        <h2 class="section-header">🌟 Why Join Us?</h2>
        <p class="section-subtitle">We care for our team as much as our patients.</p>
        <div class="col-md-6">
            
            
            <ul class="list-unstyled ps-3">
                <li>✅ Competitive pay & benefits</li>
                <li>📚 Ongoing learning & development</li>
                <li>🌍 Welcoming and inclusive culture</li>
                <li>📈 Career advancement opportunities</li>
            </ul>
        </div>
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <img src="~/images/teamwork.jpg" alt="Teamwork" class="img-fluid rounded shadow" style="max-width: 100%; height: auto;" />
        </div>
    </div>


    <!-- TESTIMONIALS -->
    <div class="text-center mb-4">
        <h2 class="section-header">😊 What Our Staff Say</h2>
        <p class="section-subtitle">Voices from our hospital family</p>
    </div>
    <div class="row mb-5">
        <div class="col-md-4">
            <div class="custom-card h-100">
                <p class="testimonial">"I grew from a junior nurse to ICU head in 3 years. Truly a place for growth!"</p>
                <footer class="blockquote-footer mt-2">Aarti, Nurse</footer>
            </div>
        </div>
        <div class="col-md-4">
            <div class="custom-card h-100">
                <p class="testimonial">"The hospital values work-life balance and that means everything to me."</p>
                <footer class="blockquote-footer mt-2">Dr. Verma, Radiologist</footer>
            </div>
        </div>
        <div class="col-md-4">
            <div class="custom-card h-100">
                <p class="testimonial">"From day one, I felt like I belonged. The support is amazing."</p>
                <footer class="blockquote-footer mt-2">Ravi, Lab Technician</footer>
            </div>
        </div>
    </div>

    <!-- JOB OPENINGS -->
    <div class="mb-5">
        <h2 class="section-header">📋 Current Openings</h2>
        <p class="section-subtitle">We’re hiring across departments</p>

        @foreach (var job in Model)
        {
            <div class="custom-card mb-3">
                <h5>
                    @if (job.Position == "Registered Nurse")
                    {
                        <span>🩺</span>
                    }
                    else if (job.Position == "Pharmacist")
                    {
                        <span>💊</span>
                    }
                    else if (job.Position == "Medical Laboratory Technician")
                    {
                        <span>🧪</span>
                    }
                    else if (job.Position == "Senior Accountant")
                    {
                        <span>💼</span>
                    }
                    else
                    {
                        <span>📋</span>
                    }
                    @job.Position
                </h5>
                <p>
                    <strong>Dept:</strong> @job.Department |
                    <strong>Vacancies:</strong> @job.Vacancies |
                    <strong>Status:</strong> @job.Status
                </p>
                @if (job.Description != null)
                {
                    <p><strong>Description:</strong> @job.Description</p>
                }
                else
                {
                <p><strong>Description:</strong> Not Provided</p>
                }
            </div>
        }
    </div>


    <!-- APPLICATION INSTRUCTIONS -->
    <div class="form-section text-center">
        <h2 class="section-header text-success">📨 Apply Now</h2>
        <p class="section-subtitle">Let’s build something great together.</p>
        <p class="lead mt-4">
            Interested in joining our team? Send us your resume along with a brief cover letter mentioning the position you're applying for.
        </p>
        <p class="fw-semibold">
            📧 Email us at: <a href="mailto:careers@ourhospital.com" class="text-primary">careers@ourhospital.com</a>
        </p>
        <p>
            Please include the job title in the subject line (e.g., "Application for Staff Nurse").
        </p>
    </div>

