@model HospitalManagementSystem.Models.patient_records
@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Patient Medical Records</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayPatientRecords", "Patient")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px; background: linear-gradient(to right, #1e3c72, #2a5298); border: none;">
            <i class="fa-solid fa-list"></i> Patient Records List
        </a>
    </div>

    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-notes-medical"></i> Patient Medical Records
            </div>

            <div class="card-body">
                <form asp-action="PatientRecords" asp-controller="Patient" method="post">
                    <input type="hidden" asp-for="RecordId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-id-badge"></i> Patient Name</label>
                            @Html.DropDownListFor(m => m.PatientId,
                                     (List<SelectListItem>)ViewBag.patientName,
                                     "-- Select Patient --",
                                     new { @class = "form-control", required = "required" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-stethoscope"></i> Diagnosis</label>
                            <textarea class="form-control" asp-for="Diagnosis" required></textarea>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-syringe"></i> Treatment</label>
                            <textarea class="form-control" asp-for="Treatment" required></textarea>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-vial"></i> Test Results</label>
                            <textarea class="form-control" asp-for="TestResults"></textarea>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-pills"></i> Medications Prescribed</label>
                            <textarea class="form-control" asp-for="MedicationsPrescribed"></textarea>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Visit Date</label>
                            <input type="datetime-local" class="form-control" asp-for="VisitDate" required />
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-floppy-disk"></i> Save Record
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
