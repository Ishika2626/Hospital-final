@model List<HospitalManagementSystem.Models.PrescriptionViewModel>

@{
    ViewBag.Title = "Prescription Details";
    Layout = "~/Views/Shared/userLayout.cshtml";
}

<div class="container mt-5" >
    <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top:100px;">
        <h3 class="text-primary">📝 Prescription Details</h3>
        <a href="@Url.Action("PatientDashboard", "Patient")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            No prescriptions found for your account.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var prescription in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0">
                      @*   <div class="card-header bg-light border-bottom">
                            <h5 class="mb-0">Prescription #@prescription.PrescriptionId</h5>
                        </div> *@
                        <div class="card-body">
                            <p><strong>Date:</strong> @prescription.Date</p>
                            <p><strong>Doctor:</strong> @prescription.DoctorName</p>
                            <p>
                                <strong>Status:</strong>
                                <span class="badge bg-@(prescription.Status == "Completed" ? "success" : "warning")">
                                    @prescription.Status
                                </span>
                            </p>
                            <p><strong>Amount:</strong> @prescription.Amount.ToString("C")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
