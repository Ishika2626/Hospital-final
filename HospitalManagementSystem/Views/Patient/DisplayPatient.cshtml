@model IEnumerable<HospitalManagementSystem.Models.PatientRegistration>

@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>All Patients - Hospital System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 95%; /* Adjust width (Can be 80% or 1200px based on need) */
            margin: auto;
            padding: 20px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 40px;
        }

        .table-responsive {
            max-height: 500px; /* Fix table height */
            overflow-y: auto;
        }

        .table th {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
        }

        .table td, .table th {
            text-align: center;
            vertical-align: middle;
            white-space: nowrap; /* Prevent text wrapping */
        }

        .btn {
            padding: 5px 10px;
        }

        .search-bar {
            width: 300px;
        }

        .action-icons i {
            font-size: 18px;
            margin: 0 5px;
            cursor: pointer;
        }

            .action-icons i:hover {
                color: #007bff;
            }

        @@media (max-width: 768px) {
            .container

        {
            max-width: 100%;
            padding: 10px;
        }

        

        }

        .gradient-text {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: bold;
        }
    </style>

</head>
<body>
    <div class="container">
        <div class="card">
            <h2 class="text-center mb-3 gradient-text">
                <i class="fa-solid fa-hospital-user"></i> All Registered Patients
            </h2>

            <!-- Search & Add Patient -->
            <div class="d-flex justify-content-between mb-3">
                <input type="text" class="form-control search-bar" placeholder="🔍 Search Patients..." id="searchPatient">
            </div>

            <!-- Patients Table -->
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Actions</th>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Gender</th>
                            <th>DOB</th>
                            <th>Address</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Emergency Contact Name</th>
                            <th>Emergency Contact Phone</th>
                            <th>Marital Status </th>
                            <th>Nationality</th>
                            <th>Blood Group</th>
                            <th>Password</th>
                            <th>Image</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="EditPatient" asp-route-id="@item.PatientId" class="btn btn-warning">
                                            <i class="fa-solid fa-edit"></i> 
                                        </a>
                                        <a href="@Url.Action("DeletePatient", "Patient", new { id = item.PatientId })" class="btn btn-danger">
                                            <i class="fa-solid fa-trash"></i> 
                                        </a>
                                    </td>
                                    <td>@item.PatientId</td>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Dob.ToShortDateString()</td>
                                    <td>@item.Address</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.EmergencyContactName</td>
                                    <td>@item.EmergencyContactPhone</td>
                                    <td>@item.MaritalStatus</td>
                                    <td>@item.Nationality</td>
                                    <td>@item.BloodGroup</td>
                                    <td>@item.Password</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.patient_img))
                                        {
                                            <img src="@Url.Content(item.patient_img)" alt="Patient Photo" width="100" height="100" />
                                        }
                                        else
                                        {
                                            <span>No Image</span>
                                        }
                                    </td>
                                    
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="15" class="text-center text-danger">No patients found.</td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
