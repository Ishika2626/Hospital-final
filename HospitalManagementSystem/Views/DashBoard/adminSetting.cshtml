@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Settings - Hospital System</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .nav-pills .nav-link.active {
            background-color: #007bff;
        }

        .settings-section {
            padding: 20px;
        }

        .form-control {
            border-radius: 5px;
        }

        .save-btn {
            width: 100%;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card p-4">
            <h2 class="text-center text-primary mb-3">
                <i class="fa-solid fa-gear"></i> Admin Settings
            </h2>

            <div class="row">
                <!-- Sidebar Navigation -->
                <div class="col-md-3">
                    <ul class="nav flex-column nav-pills">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="pill" href="#profileSettings">
                                <i class="fa-solid fa-user"></i> Profile Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="pill" href="#securitySettings">
                                <i class="fa-solid fa-lock"></i> Security Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="pill" href="#notificationSettings">
                                <i class="fa-solid fa-bell"></i> Notifications
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="pill" href="#systemSettings">
                                <i class="fa-solid fa-cogs"></i> System Settings
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Content Area -->
                <div class="col-md-9">
                    <div class="tab-content">

                        <!-- Profile Settings -->
                        <div class="tab-pane fade show active settings-section" id="profileSettings">
                            <h4><i class="fa-solid fa-user"></i> Profile Settings</h4>
                            <form>
                                <div class="mb-3">
                                    <label class="form-label">Full Name</label>
                                    <input type="text" class="form-control" placeholder="Enter full name">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-control" placeholder="Enter email">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Phone Number</label>
                                    <input type="text" class="form-control" placeholder="Enter phone number">
                                </div>
                                <button class="btn btn-primary save-btn"><i class="fa-solid fa-save"></i> Save Changes</button>
                            </form>
                        </div>

                        <!-- Security Settings -->
                        <div class="tab-pane fade settings-section" id="securitySettings">
                            <h4><i class="fa-solid fa-lock"></i> Security Settings</h4>
                            <form>
                                <div class="mb-3">
                                    <label class="form-label">Change Password</label>
                                    <input type="password" class="form-control" placeholder="Enter new password">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Two-Factor Authentication (2FA)</label>
                                    <select class="form-control">
                                        <option>Enable</option>
                                        <option>Disable</option>
                                    </select>
                                </div>
                                <button class="btn btn-primary save-btn"><i class="fa-solid fa-save"></i> Save Changes</button>
                            </form>
                        </div>

                        <!-- Notification Settings -->
                        <div class="tab-pane fade settings-section" id="notificationSettings">
                            <h4><i class="fa-solid fa-bell"></i> Notification Settings</h4>
                            <form>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="emailAlerts">
                                    <label class="form-check-label" for="emailAlerts">Receive Email Alerts</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="smsAlerts">
                                    <label class="form-check-label" for="smsAlerts">Receive SMS Alerts</label>
                                </div>
                                <button class="btn btn-primary save-btn"><i class="fa-solid fa-save"></i> Save Changes</button>
                            </form>
                        </div>

                        <!-- System Settings -->
                        <div class="tab-pane fade settings-section" id="systemSettings">
                            <h4><i class="fa-solid fa-cogs"></i> System Settings</h4>
                            <form>
                                <div class="mb-3">
                                    <label class="form-label">Application Name</label>
                                    <input type="text" class="form-control" placeholder="Enter system name">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Maintenance Mode</label>
                                    <select class="form-control">
                                        <option>Off</option>
                                        <option>On</option>
                                    </select>
                                </div>
                                <button class="btn btn-primary save-btn"><i class="fa-solid fa-save"></i> Save Changes</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
