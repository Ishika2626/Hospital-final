@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Notifications - Hospital System</title>

    <!-- Bootstrap & FontAwesome -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .table th {
            background-color: #007bff;
            color: white;
        }

        .table td, .table th {
            text-align: center;
            vertical-align: middle;
        }

        .btn {
            padding: 5px 10px;
        }

        .notification-icon {
            position: relative;
            font-size: 24px;
            cursor: pointer;
        }

        .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: red;
            color: white;
            border-radius: 50%;
            padding: 5px 10px;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="text-primary"><i class="fa-solid fa-bell"></i> Notifications</h2>

            <!-- Notification Bell with Dropdown -->
            <div class="dropdown">
                <button class="btn btn-light position-relative notification-icon" type="button" data-bs-toggle="dropdown">
                    <i class="fa-solid fa-bell"></i>
                    <span id="notificationCount" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        3
                    </span>
                </button>

                <!-- Notification Dropdown -->
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#" onclick="openNotification(1)">New Appointment Request</a></li>
                    <li><a class="dropdown-item" href="#" onclick="openNotification(2)">Prescription Issued</a></li>
                    <li><a class="dropdown-item" href="#" onclick="openNotification(3)">System Maintenance Alert</a></li>
                </ul>
            </div>
        </div>

        <!-- Notification Table -->
        <div class="card p-3">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Notification</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>New Appointment Request from Patient ID: 123</td>
                            <td>March 12, 2025</td>
                            <td><span class="badge bg-warning">Unread</span></td>
                            <td><a href="/Appointments/Details/123" class="btn btn-sm btn-primary">View</a></td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Prescription Issued for Patient ID: 456</td>
                            <td>March 11, 2025</td>
                            <td><span class="badge bg-success">Read</span></td>
                            <td><a href="/Prescriptions/Details/456" class="btn btn-sm btn-info">View</a></td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>System Maintenance Alert</td>
                            <td>March 10, 2025</td>
                            <td><span class="badge bg-danger">Urgent</span></td>
                            <td><button class="btn btn-sm btn-secondary" onclick="alert('System Maintenance scheduled for midnight.')">View</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script>
        function openNotification(notificationId) {
            switch(notificationId) {
                case 1:
                    window.location.href = "/Appointments/PendingRequests";
                    break;
                case 2:
                    window.location.href = "/Prescriptions/ViewAll";
                    break;
                case 3:
                    alert("System Maintenance scheduled for midnight.");
                    break;
                default:
                    console.log("Unknown notification");
            }
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
