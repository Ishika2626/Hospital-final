@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Profile - Hospital System</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .profile-img {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
        }

        .btn-custom {
            width: 100%;
        }

        .info-table td {
            font-size: 16px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card p-4">
            <h2 class="text-center text-primary">
                <i class="fa-solid fa-user-shield"></i> Admin Profile
            </h2>

            <!-- Admin Profile Section -->
            <div class="text-center">
                <img src="https://via.placeholder.com/120" alt="Admin Photo" class="profile-img">
                <h4 class="mt-2">John Doe</h4>
                <p class="text-muted">Administrator</p>
                <p><i class="fa-solid fa-envelope"></i> johndoe@example.com</p>
            </div>

            <!-- Profile Actions -->
            <div class="row text-center mt-3">
                <div class="col-md-6">
                    <a href="@Url.Action("EditProfile", "Admin")" class="btn btn-primary btn-custom">
                        <i class="fa-solid fa-user-edit"></i> Edit Profile
                    </a>
                </div>
                <div class="col-md-6">
                    <a href="@Url.Action("ChangePassword", "Admin")" class="btn btn-danger btn-custom">
                        <i class="fa-solid fa-lock"></i> Change Password
                    </a>
                </div>
            </div>

            <!-- Admin Information Table -->
            <div class="mt-4">
                <table class="table table-bordered info-table">
                    <tbody>
                        <tr>
                            <th>Full Name</th>
                            <td>John Doe</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>johndoe@example.com</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>+123 456 7890</td>
                        </tr>
                        <tr>
                            <th>Role</th>
                            <td>Administrator</td>
                        </tr>
                        <tr>
                            <th>Joined On</th>
                            <td>Jan 10, 2022</td>
                        </tr>
                        <tr>
                            <th>Last Login</th>
                            <td>Mar 12, 2025</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
