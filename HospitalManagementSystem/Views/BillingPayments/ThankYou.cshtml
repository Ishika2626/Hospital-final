@{
    Layout = "~/Views/Shared/userLayout.cshtml";
    var paymentId = ViewBag.PaymentId;
    var invoice = ViewBag.Invoice;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Payment Success</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body style="margin-top:100px;">
    <div class="container mt-5">
        <h2 class="mb-4 text-success">Thank You for Your Payment!</h2>

        <div class="card">
            <div class="card-body">
                <p><strong>Patient ID:</strong> @invoice.PatientId</p>
                <p><strong>Invoice ID:</strong> @invoice.InvoiceId</p>
                <p><strong>Description:</strong> @invoice.Description</p>
                <p><strong>Total Amount Paid:</strong> ₹@invoice.Amount.ToString("F2")</p> <!-- Ensure currency format -->
                <p><strong>Status:</strong> <span class="badge bg-success">Paid</span></p>

                <div class="mt-3">
                    <a href="@Url.Action("PatientDashboard", "Patient")" class="btn btn-primary">Go to Dashboard</a>

                    <!-- Show Invoice Button -->
                    <a href="@Url.Action("DisplayBill", "BillingPayments", new { invoiceId = invoice.InvoiceId })" class="btn btn-info ms-3">Show Invoice</a>

                    <!-- Download Invoice Button -->
                    <a href="@Url.Action("DownloadInvoice", "BillingPayments", new { invoiceId = invoice.InvoiceId })" class="btn btn-secondary ms-3">Download Invoice</a>

                </div>
            </div>
        </div>
    </div>
</body>
</html>
