@{
    Layout = "~/Views/Shared/admin.cshtml";
}
@model HospitalManagementSystem.Models.InsuranceIntegration
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Insurance Integration</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(to right, #1e3c72, #2a5298); /* Gradient blue */
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control, .form-select {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayInsuranceIntegration", "BillingPayments")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px; background: linear-gradient(to right, #1e3c72, #2a5298); border: none;">
            <i class="fa-solid fa-list"></i> Insurance Claims List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-file-shield"></i> Insurance Integration Entry
            </div>
            <div class="card-body">

                <form asp-controller="BillingPayments" asp-action="InsuranceIntegration" method="post">
                   
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label"><i class="fa-solid fa-id-badge"></i> Patient Name</label>
                                @Html.DropDownListFor(m => m.PatientId,
                                         (List<SelectListItem>)ViewBag.patientName,
                                         "-- Select Patient --",
                                         new { @class = "form-control", required = "required" })
                            </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-building"></i> Insurance Provider</label>
                            <input type="text" asp-for="InsuranceProvider" class="form-control" id="insurance_provider" placeholder="Enter Insurance Provider" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-file-lines"></i> Claim Number</label>
                            <input type="text" asp-for="ClaimNumber" class="form-control" id="claim_number" placeholder="Enter Claim Number" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-dollar-sign"></i> Claim Amount</label>
                            <input type="number" asp-for="ClaimAmount" step="0.01" class="form-control" id="claim_amount" placeholder="Enter Claim Amount" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-check-circle"></i> Claim Status</label>
                            <select class="form-select" asp-for="ClaimStatus" id="claim_status">
                                <option value="Pending">Pending</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                                <option value="Settled">Settled</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-money-bill-wave"></i> Settlement Amount</label>
                            <input type="number" asp-for="SettlementAmount" step="0.01" class="form-control" id="settlement_amount" placeholder="Enter Settlement Amount">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar-day"></i> Settlement Date</label>
                            <input type="date" asp-for="SettlementDate" class="form-control" id="settlement_date">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-floppy-disk"></i> Save Claim
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
