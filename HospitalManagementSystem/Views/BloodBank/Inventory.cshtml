@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inventory Management</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayInventory", "BloodBank")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Inventory List
        </a>
    </div>

    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-box"></i> Inventory Management
            </div>

            <div class="card-body">
                <form id="inventoryForm">
                    <div class="row">
                        <!-- Equipment Name -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-toolbox"></i> Equipment Name</label>
                            <input type="text" class="form-control" id="equipment_name" placeholder="Enter equipment name" required>
                        </div>

                        <!-- Quantity -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-sort-numeric-up"></i> Quantity</label>
                            <input type="number" class="form-control" id="quantity" value="0" min="0" required>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-floppy-disk"></i> Submit
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript for Handling Form Submission -->
    <script>
        document.getElementById("inventoryForm").addEventListener("submit", function(event) {
            event.preventDefault();

            // Get values from form
            let equipment_name = document.getElementById("equipment_name").value;
            let quantity = document.getElementById("quantity").value;

            // Insert new row in table
            let table = document.getElementById("recordTable");
            let newRow = table.insertRow();
            newRow.innerHTML = `
                <td>${equipment_name}</td>
                <td>${quantity}</td>
                <td>${new Date().toLocaleString()}</td>
            `;

            // Reset form after submission
            document.getElementById("inventoryForm").reset();
        });
    </script>
</body>
</html>
