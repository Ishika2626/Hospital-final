@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Blood Donation History</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- FontAwesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }
        .container {
            margin-top: 50px;
        }
        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }
        .card-header {
            background-color: #dc3545;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }
        .form-control {
            border-radius: 5px;
        }
        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayBloodDonationHistory","BloodBank")" class="btn btn-danger btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Blood Donation History List
        </a>
    </div>

    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-tint"></i> Blood Donation History
            </div>
            <div class="card-body">
                <form id="donationHistoryForm">
                    <div class="row">
                        <!-- Donor ID -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user"></i> Donor ID</label>
                            <input type="text" class="form-control" id="donor_id" placeholder="Enter Donor ID" required>
                        </div>
                        <!-- Donation Date -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Donation Date</label>
                            <input type="date" class="form-control" id="donation_date" required>
                        </div>
                        <!-- Blood Bag ID -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-flask"></i> Blood Bag ID</label>
                            <input type="text" class="form-control" id="blood_bag_id" placeholder="Enter Blood Bag ID" required>
                        </div>
                        <!-- Status -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-check-circle"></i> Status</label>
                            <select class="form-control" id="status" required>
                                <option value="">Select Status</option>
                                <option value="Accepted">Accepted</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                        </div>
                    </div>
                    <!-- Buttons -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-danger">
                                <i class="fa-solid fa-floppy-disk"></i> Submit
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-secondary">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    
</body>
</html>