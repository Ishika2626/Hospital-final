    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blood Donation Campaigns</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f7f7f7, #e6e6e6);
        }

        .campaign-card {
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .campaign-card:hover {
                transform: scale(1.02);
            }

        .campaign-img {
            height: 200px;
            width: 100%;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .btn-primary {
            background-color: #e63946;
            border-color: #e63946;
        }

            .btn-primary:hover {
                background-color: #c1121f;
                border-color: #c1121f;
            }

    </style>
</head>
<body>
    <div class="container py-5" style="margin-top: 80px;">
        <h2 class="text-center mb-4"><i class="fas fa-calendar-alt"></i> Upcoming Blood Donation Campaigns</h2>

        <div class="row g-4">
            <!-- Campaign 1 -->
            <div class="col-md-6 col-lg-4">
                <div class="card campaign-card h-100">
                    <img src="/api/placeholder/400/200" class="campaign-img" alt="Campaign Image">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge bg-primary">Upcoming</span>
                            <small class="text-muted">March 25, 2025</small>
                        </div>
                        <h5 class="card-title">Community Blood Drive</h5>
                        <p class="card-text">Join us at Central Park for a community-driven blood donation event.</p>
                        <div class="d-flex align-items-center mt-3">
                            <i class="fas fa-map-marker-alt text-primary me-2"></i>
                            <small>Central Park, NY</small>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="fas fa-clock text-primary me-2"></i>
                            <small>10:00 AM - 4:00 PM</small>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 pt-0">
                        <a asp-controller="BloodBank" asp-action="UserDonorRegistre" class="btn btn-primary w-100">Register</a>
                    </div>
                </div>
            </div>

