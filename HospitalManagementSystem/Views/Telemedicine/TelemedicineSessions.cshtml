@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Telemedicine Sessions</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control, .form-select {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayTelemedicineSessions","Telemedicine")" class="btn btn-danger btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Help Desk Appointment Request List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-video"></i> Telemedicine Session
            </div>
            <div class="card-body">
                <!-- Form to add telemedicine session -->
                <form id="telemedicineSessionForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-id-badge"></i> Session ID</label>
                            <input type="number" class="form-control" id="session_id" placeholder="Auto-generated" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user"></i> Patient ID</label>
                            <input type="number" class="form-control" id="patient_id" placeholder="Enter Patient ID" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user-md"></i> Doctor ID</label>
                            <input type="number" class="form-control" id="doctor_id" placeholder="Enter Doctor ID" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar-alt"></i> Session Date</label>
                            <input type="datetime-local" class="form-control" id="session_date" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-clock"></i> Session Duration (Minutes)</label>
                            <input type="number" class="form-control" id="session_duration" placeholder="Enter duration in minutes">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-pills"></i> Prescription ID</label>
                            <input type="number" class="form-control" id="prescription_id" placeholder="Enter Prescription ID (if applicable)">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-notes-medical"></i> Diagnosis</label>
                            <input type="text" class="form-control" id="diagnosis" placeholder="Enter Diagnosis (if applicable)">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-sticky-note"></i> Notes</label>
                            <textarea class="form-control" id="notes" rows="3" placeholder="Enter session notes (if any)"></textarea>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-list-alt"></i> Status</label>
                            <select class="form-select" id="status" required>
                                <option value="Scheduled">Scheduled</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-video"></i> Session Type</label>
                            <select class="form-select" id="session_type" required>
                                <option value="Video Call">Video Call</option>
                                <option value="Phone Call">Phone Call</option>
                                <option value="Chat">Chat</option>
                            </select>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-file-medical"></i> Treatment Plan</label>
                            <textarea class="form-control" id="treatment_plan" rows="3" placeholder="Enter Treatment Plan (if any)"></textarea>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-save"></i> Save Session
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

       
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
