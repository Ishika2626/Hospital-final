@{
    Layout = "~/Views/Shared/admin.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Online Prescriptions</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #007bff;
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control, .form-select {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayOnlinePrescriptions","Telemedicine")" class="btn btn-danger btn-sm px-3 py-2" style="font-size: 14px;">
            <i class="fa-solid fa-list"></i> Help Desk Appointment Request List
        </a>
    </div>
    <div class="container">
        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-prescription"></i> Online Prescription
            </div>
            <div class="card-body">
                <!-- Form to add online prescriptions -->
                <form id="prescriptionForm">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-id-badge"></i> Prescription ID</label>
                            <input type="number" class="form-control" id="prescription_id" placeholder="Auto-generated" disabled>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user-md"></i> Doctor ID</label>
                            <input type="number" class="form-control" id="doctor_id" placeholder="Enter Doctor ID" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-user"></i> Patient ID</label>
                            <input type="number" class="form-control" id="patient_id" placeholder="Enter Patient ID" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-video"></i> Session ID (Optional)</label>
                            <input type="number" class="form-control" id="session_id" placeholder="Enter Session ID">
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-pills"></i> Medication</label>
                            <textarea class="form-control" id="medication" rows="3" placeholder="List of prescribed medicines" required></textarea>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-prescription-bottle"></i> Dosage</label>
                            <textarea class="form-control" id="dosage" rows="2" placeholder="Enter dosage instructions" required></textarea>
                        </div>
                        <div class="col-md-12 mb-3">
                            <label class="form-label"><i class="fa-solid fa-note-sticky"></i> Notes</label>
                            <textarea class="form-control" id="notes" rows="2" placeholder="Additional prescription notes"></textarea>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Issued Date</label>
                            <input type="datetime-local" class="form-control" id="issued_date" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-list-alt"></i> Status</label>
                            <select class="form-select" id="status" required>
                                <option value="Issued">Issued</option>
                                <option value="Filled">Filled</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-save"></i> Save Prescription
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

      
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
