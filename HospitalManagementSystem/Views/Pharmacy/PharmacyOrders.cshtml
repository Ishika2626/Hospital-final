@{
    Layout = "~/Views/Shared/admin.cshtml";
}
@model HospitalManagementSystem.Models.PharmacyOrder
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Pharmacy Orders</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <style>
        body {
            background: #f4f7f6;
            font-family: Arial, sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background: linear-gradient(to right, #1e3c72, #2a5298);
            color: white;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
        }

        .form-control {
            border-radius: 5px;
        }

        .btn {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="col-md-2" style="margin-left:40px;">
        <a href="@Url.Action("DisplayPharmacyOrders","Pharmacy")" class="btn btn-primary btn-sm px-3 py-2" style="font-size: 14px; background: linear-gradient(to right, #1e3c72, #2a5298); border: none;">
            <i class="fa-solid fa-list"></i> Pharmacy Orders List
        </a>
    </div>
    <div class="container">
      

        <div class="card p-3">
            <div class="card-header">
                <i class="fa-solid fa-pills"></i> Pharmacy Orders
            </div>

            <div class="card-body">
                <form id="pharmacyOrderForm" action="@Url.Action("PharmacyOrders", "Pharmacy")" method="post">
                    <div class="row">
                        <!-- Medicine ID -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-id-badge"></i> Select Medicine</label>
                            @Html.DropDownListFor(m => m.MedicineId,
                                     (List<SelectListItem>)ViewBag.medicineName,
                                     "-- Select Medicine --",
                                     new { @class = "form-control", required = "required" })

                        </div>


                        <!-- Order Quantity -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-sort-numeric-up"></i> Order Quantity</label>
                            <input type="number" class="form-control" id="order_quantity" asp-for="OrderQuantity"  required min="1">
                        </div>

                        <!-- Order Date -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-calendar"></i> Order Date</label>
                            <input type="datetime-local" class="form-control" id="order_date" asp-for="OrderDate" required>
                        </div>

                        <!-- Order Status -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-truck"></i> Order Status</label>
                            <select class="form-control" id="order_status" asp-for="OrderStatus" required>
                                <option value="Pending">Pending</option>
                                <option value="Delivered">Delivered</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="Shipped">Shipped</option>
                            </select>
                        </div>

                        <!-- Supplier Name -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-truck-loading"></i> Supplier Name</label>
                            <input type="text" class="form-control" id="supplier_name" asp-for="SupplierName" required>
                        </div>

                        <!-- Total Cost -->
                        <div class="col-md-6 mb-3">
                            <label class="form-label"><i class="fa-solid fa-dollar-sign"></i> Total Cost</label>
                            <input type="number" class="form-control" id="total_cost" asp-for="TotalCost" required min="0" step="0.01">
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <button type="submit" class="btn btn-success">
                                <i class="fa-solid fa-plus"></i> Add Order
                            </button>
                        </div>
                        <div class="col-md-6">
                            <button type="reset" class="btn btn-danger">
                                <i class="fa-solid fa-eraser"></i> Reset
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
